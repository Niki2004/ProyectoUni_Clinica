@model ProyectoClinica.Models.Productos_Conta

@{
    ViewBag.Title = "Create";
}

<link href="~/CSS/Crear.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Crear Producto</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-section">
            <legend>Información Producto</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre_producto, "Nombre del Producto", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Nombre_producto, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Tipo_producto, "Tipo del Producto", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Tipo_producto, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Fechas del Producto</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Creacion_producto, "Fecha de Creación", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Creacion_producto, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Actualizacion_producto, "Fecha de Actualización", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Actualizacion_producto, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Eliminacion_producto, "Fecha de Eliminación", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Eliminacion_producto, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Detalles Adicionales</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Id_Usuario, "Usuario", new { @class = "control-label" })
                @Html.EditorFor(model => model.Id_Usuario, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Estatus_producto, "Estado", new { @class = "control-label" })
                @Html.DropDownListFor(model => model.Estatus_producto,
                    new List<SelectListItem> {
                        new SelectListItem { Text = "Activo", Value = "true", Selected = (Model?.Estatus_producto == true) },
                        new SelectListItem { Text = "Inactivo", Value = "false", Selected = (Model?.Estatus_producto == false) }
                    },
                    new { @class = "form-control estatus-dropdown" })
                @Html.ValidationMessageFor(model => model.Estatus_producto, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group text-center">
            <input type="submit" value="Crear Producto" class="btn-primary" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


