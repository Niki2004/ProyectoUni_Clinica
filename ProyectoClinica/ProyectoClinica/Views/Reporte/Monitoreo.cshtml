@model IEnumerable<ProyectoClinica.Models.ApplicationUser>
@{
    ViewBag.Title = "Reporte de Monitoreo";
    var nombre = Model.Select(c => c.Nombre).Distinct().OrderBy(e => e).ToList();
}

<style>
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("VistaAdmRep", "Reporte")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>

<center><h2 class="mb-4">Reporte de Monitoreo</h2></center>

<div class="card mb-4 shadow-sm">
    <div class="card-header" style="background-color: #0b7b82; color: white;">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de búsqueda</h5>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Monitoreo", "Reporte", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="row">
              <div class="col-md-4 mb-3">
                  <label for="usuarios" class="form-label">Nombre:</label>
                  <select name="usuarios" id="usuarios" class="form-control w-100">
                      <option value="">-- Nombre del usuario --</option>
                      @foreach (var esp in nombre)
                      {
                          <option value="@esp" @(ViewBag.Nombre != null && ViewBag.Nombre.ToString() == esp ? "selected" : "")>@esp</option>
                      }
                  </select>
              </div>
                <div class="col-md-4 align-self-end mb-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                        <a href="@Url.Action("Monitoreo", "Reporte")" class="btn btn-secondary">
                            <i class="fas fa-broom"></i> Limpiar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Listado De Monitoreo</h5>
            <a href="@Url.Action("ExportarExcelMonitoreo", "Reporte", new { nombre = ViewBag.Nombre })"
               class="btn btn-success btn-sm">
                <i class="fas fa-file-excel"></i> Exportar a Excel
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Dirección</th>
                        <th>Género</th>
                        <th>Edad</th>
                        <th>Correo</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Nombre</td>
                                <td>@user.Apellido</td>
                                <td>@user.Direccion</td>
                                <td>@user.Genero_Paciente</td>
                                <td>@user.Edad_Paciente</td>
                                <td>@user.Email</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i> No se encontraron usuarios con los filtros seleccionados
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
        });
    </script>
}