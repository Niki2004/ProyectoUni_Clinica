@model IEnumerable<ProyectoClinica.Models.ApplicationUser>
@{
    ViewBag.Title = "Reporte de Pacientes";
    var direccion = ViewBag.Direccion as string;
    var genero = ViewBag.Genero as string;
    var edad = ViewBag.Edad as int?;
}

<style>
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("VistaAdmRep", "Reporte")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>

<center><h2 class="mb-4">Reporte de Pacientes</h2></center>

<div class="card mb-4 shadow-sm">
    <div class="card-header" style="background-color: #0b7b82; color: white;">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de búsqueda</h5>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("DatosPaciente", "Reporte", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label for="direccion" class="form-label">Dirección:</label>
                    <input type="text" name="direccion" id="direccion" class="form-control w-100" value="@direccion" />
                </div>

                <div class="col-md-3 mb-3">
                    <label for="genero" class="form-label">Género:</label>
                    <select name="genero" id="genero" class="form-control w-100">
                        <option value="">-- Todos --</option>
                        <option value="Hombre" @(genero == "Hombre" ? "selected" : "")>Hombre</option>
                        <option value="Mujer" @(genero == "Mujer" ? "selected" : "")>Mujer</option>
                        <option value="Otro" @(genero == "Otro" ? "selected" : "")>Otro</option>
                    </select>
                </div>

                <div class="col-md-3 mb-3">
                    <label for="edad" class="form-label">Edad:</label>
                    <input type="number" name="edad" id="edad" class="form-control w-100" value="@edad" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                    <a href="@Url.Action("DatosPaciente", "Reporte")" class="btn btn-secondary">
                        <i class="fas fa-broom"></i> Limpiar
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-users"></i> Listado de Pacientes</h5>
            <a href="@Url.Action("ExportarExcelDatosPaciente", "Reporte", new { direccion = ViewBag.Direccion, genero = ViewBag.Genero, edad = ViewBag.Edad })"
               class="btn btn-success btn-sm">
                <i class="fas fa-file-excel"></i> Exportar a Excel
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Dirección</th>
                        <th>Género</th>
                        <th>Edad</th>
                        <th>Nombre Completo</th>
                        <th>Correo Electrónico</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var paciente in Model)
                        {
                            <tr>
                                <td>@paciente.Direccion</td>
                                <td>@paciente.Genero_Paciente</td>
                                <td>@paciente.Edad_Paciente</td>
                                <td>@paciente.Nombre</td>
                                <td>@paciente.Email</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i> No se encontraron pacientes con los filtros seleccionados
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
