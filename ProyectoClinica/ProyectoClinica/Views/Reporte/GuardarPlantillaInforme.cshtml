@model ProyectoClinica.Models.PlantillaInforme

@{
    ViewBag.Title = "Guardar Plantilla de Informe";
}

<link href="~/CSS/Plantilla.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Guardar detalles de las Plantillas</h2>

    <form method="post" action="@Url.Action("GuardarPlantillaInforme")" class="needs-validation" novalidate>
        <div class="form-section">
            <h4>Información de la Plantilla</h4>
            <div class="form-grid">
                <div class="form-group">
                    <label for="nombrePlantilla" class="control-label">Nombre de la Plantilla</label>
                    <input type="text" id="nombrePlantilla" name="nombrePlantilla" class="form-control" required />
                </div>

                <div class="form-group">
                    <label for="camposSeleccionados" class="control-label">Campos Seleccionados</label>
                    <textarea id="camposSeleccionados" name="camposSeleccionados" class="form-control" required></textarea>
                </div>
            </div>
        </div>

        <div class="form-section text-center">
            <button type="submit" class="btn-form btn-submit">
                <i class="fas fa-save"></i> 
            </button>

            <a href="@Url.Action("ListarPlantillasInformes", "Reporte")" class="btn-form btn-home">
                <i class="fas fa-home"></i> 
            </a>
        </div>
    </form>
</div>
