@model IEnumerable<ProyectoClinica.Models.ApplicationUser>
@{
    ViewBag.Title = "Reporte del cliente";
    var NombreUser = Model.Select(c => c.Nombre).Distinct().OrderBy(e => e).ToList();
}

<style>
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Asegurarse de que la tabla no se desborde y se adapte */
    .table-responsive {
        overflow-x: auto;  /* Permite scroll horizontal solo si es necesario */
        -webkit-overflow-scrolling: touch;
        margin-top: 20px;
    }

    table {
        width: 100%; 
        table-layout: fixed;  
    }

    th, td {
        padding: 10px;
        text-align: left;
        word-wrap: break-word; 
        max-width: 200px; 
    }
    }
</style>

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("VistaAdmRep", "Reporte")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>

<center><h2 class="mb-4">Reporte del usuario</h2></center>

<div class="card mb-4 shadow-sm">
    <div class="card-header" style="background-color: #0b7b82; color: white;">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de búsqueda</h5>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Personalizacion", "Reporte", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="NombreUser" class="form-label">Usuario:</label>
                    <select name="NombreUser" id="NombreUser" class="form-control w-100">
                        <option value="">-- Todos los usuarios --</option>
                        @foreach (var esp in NombreUser)
                        {
                            <option value="@esp" @(ViewBag.NombreUser != null && ViewBag.NombreUser.ToString() == esp ? "selected" : "")>@esp</option>
                        }
                    </select>
                </div>

                <div class="col-md-4 align-self-end mb-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                        <a href="@Url.Action("Personalizacion", "Reporte")" class="btn btn-secondary">
                            <i class="fas fa-broom"></i> Limpiar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Listado de usuarios</h5>
            <a href="@Url.Action("ExportarExcelPersonalizacion", "Reporte", new { NombreUser = ViewBag.NombreUser  })"
               class="btn btn-success btn-sm">
                <i class="fas fa-file-excel"></i> Exportar a Excel
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Edad</th>
                        <th>Dirección</th>
                        <th>Cédula</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                        <th>Género</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var usuario in Model)
                        {
                            <tr>
                                <td>@usuario.Nombre</td>
                                <td>@usuario.Apellido</td>
                                <td>@usuario.Edad_Paciente</td>
                                <td>@usuario.Direccion</td>
                                <td>@usuario.Cedula</td>
                                <td>@usuario.Email</td>
                                <td>@usuario.PhoneNumber</td>
                                <td>@usuario.Genero_Paciente</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i> No se encontraron usuarios con los filtros seleccionados
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <br>

    <div style="text-align: center; margin-bottom: 20px;">
        <a href="@Url.Action("ListarPlantillasInformes", "Reporte")" class="custom-btn">
            <i class="fas fa-list"></i> Listar Plantillas
        </a>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            
        });
    </script>
}
