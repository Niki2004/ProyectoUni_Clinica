@model IEnumerable<ProyectoClinica.Models.Receta>
@{
    ViewBag.Title = "Reporte de Citas";
    var nombreReceta = Model.Select(c => c.Nombre_Receta).Distinct().OrderBy(e => e).ToList();
}

<style>
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("VistaAdmRep", "Reporte")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>

<center><h2 class="mb-4">Reporte de Tratamiento</h2></center>

<div class="card mb-4 shadow-sm">
    <div class="card-header" style="background-color: #0b7b82; color: white;">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de búsqueda</h5>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("ResultadoTratamiento", "Reporte", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="nombreReceta" class="form-label">Recetas:</label>
                    <select name="nombreReceta" id="nombreReceta" class="form-control w-100">
                        <option value="">-- Nombre de Recetas --</option>
                        @foreach (var esp in nombreReceta)
                        {
                            <option value="@esp" @(ViewBag.NombreReceta != null && ViewBag.NombreReceta.ToString() == esp ? "selected" : "")>@esp</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 align-self-end mb-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                        <a href="@Url.Action("ResultadoTratamiento", "Reporte")" class="btn btn-secondary">
                            <i class="fas fa-broom"></i> Limpiar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Listado de Citas</h5>
            <a href="@Url.Action("ExportarExcelRecetas", "Reporte", new { nombreReceta = ViewBag.NombreReceta })"
               class="btn btn-success btn-sm">
                <i class="fas fa-file-excel"></i> Exportar a Excel
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Fecha de creación</th>
                        <th>Nombre de la receta</th>
                        <th>Observaciones de pacientes</th>
                        <th>Duración del tratamiento</th>
                        <th>Cantidad requerida</th>
                        <th>Motivo de la solicitud</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var receta in Model)
                        {
                            <tr>
                                <td>@receta.Fecha_Creacion.ToString("dd/MM/yyyy")</td>
                                <td>@receta.Nombre_Receta</td>
                                <td>@receta.Observaciones_Pacientes</td>
                                <td>@receta.Duracion_Tratamiento</td>
                                <td>@receta.Cantidad_Requerida</td>
                                <td>@receta.Motivo_Solicitud</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i> No se encontraron tratamientos con los filtros seleccionados
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
        });
    </script>
}