@{
    ViewBag.Title = "Listar Plantillas de Informes";
}

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("Personalizacion", "Reporte")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>

<h2 class="text-center mb-4">Detalles de las plantillas</h2>

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre de la Plantilla</th>
                    <th>Breve descripción</th>
                    <th>Fecha de Creación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plantilla in Model)
                {
                    <tr>
                        <td>@plantilla.NombrePlantilla</td>
                        <td>@plantilla.CamposSeleccionados</td>
                        <td>@plantilla.FechaCreacion.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center" role="alert">
        No hay plantillas guardadas.
    </div>
}

<div class="text-center mt-4">
    <a href="@Url.Action("GuardarPlantillaInforme")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Crear Nueva Plantilla
    </a>
</div>


    <style>
        /* Estilos para la tabla */
        .table {
            width: 100%;
            margin-top: 20px;
            border-radius: 10px;
        }

            .table th, .table td {
                padding: 15px;
                text-align: center;
            }

        .thead-dark {
            background-color: #0b7b82;
            color: white;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        .alert {
            font-size: 18px;
            padding: 20px;
        }

        .btn-primary {
            background-color: #0b7b82;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: white;
            font-size: 16px;
            transition: background 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #095f59;
            }

        .custom-btn {
            background-color: #0b7b82 !important;
            color: white !important;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 16px;
            text-decoration: none;
            transition: background 0.3s ease, transform 0.2s ease;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
