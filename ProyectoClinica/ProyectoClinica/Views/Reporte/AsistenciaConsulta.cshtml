@model IEnumerable<ProyectoClinica.Models.Cita>
@{
    ViewBag.Title = "Reporte de Citas";
    var especialidades = Model.Select(c => c.Medico.Especialidad).Distinct().OrderBy(e => e).ToList();
}

<link href="~/CSS/Reportes.css" rel="stylesheet" />

<div class="report-header">
    <h2>Reporte de Consultas</h2>
    <a href="@Url.Action("VistaAdmRep", "Reporte")" class="custom-btn home-btn">
        <i class="fas fa-home"></i>
    </a>
</div>

<div class="container">
    <div class="card mb-4 shadow-sm filter-card">
        <div class="card-header" style="color: white;">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de búsqueda</h5>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("AsistenciaConsulta", "Reporte", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="fechaCita" class="form-label">Fecha de la cita:</label>
                        <input type="date" name="fechaCita" id="fechaCita" class="form-control"
                               value="@(ViewBag.FechaCita == null ? string.Empty : Convert.ToDateTime(ViewBag.FechaCita).ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-4">
                        <label for="especialidad" class="form-label">Especialidad:</label>
                        <select name="especialidad" id="especialidad" class="form-select">
                            <option value="">-- Todas las especialidades --</option>
                            @foreach (var esp in especialidades)
                            {
                                <option value="@esp" @(ViewBag.Especialidad != null && ViewBag.Especialidad.ToString() == esp ? "selected" : "")>@esp</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 align-self-end">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                            <a href="@Url.Action("AsistenciaConsulta", "Reporte")" class="btn btn-secondary">
                                <i class="fas fa-broom"></i> Limpiar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Listado de Citas</h5>
                <a href="@Url.Action("ExportarExcel", "Reporte", new { fechaCita = ViewBag.FechaCita, especialidad = ViewBag.Especialidad })"
                   class="btn btn-success btn-sm">
                    <i class="fas fa-file-excel"></i> Exportar a Excel
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="comentariosTable" class="modern-table">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Especialidad</th>
                            <th>Paciente</th>
                            <th>Síntomas</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody id="comentariosBody">
                        @if (Model.Any())
                        {
                            foreach (var cita in Model)
                            {
                                <tr>
                                    <td>@cita.Fecha_Cita.ToString("dd/MM/yyyy")</td>
                                    <td>@cita.Medico.Especialidad</td>
                                    <td>@cita.Nombre_Paciente</td>
                                    <td>@cita.Sintomas</td>
                                    <td>
                                        @if (cita.Estado_Asistencia == "Asistió")
                                        {
                                            <span class="badge bg-success">@cita.Estado_Asistencia</span>
                                        }
                                        else if (cita.Estado_Asistencia == "No Asistió")
                                        {
                                            <span class="badge bg-danger">@cita.Estado_Asistencia</span>
                                        }
                                        else if (cita.Estado_Asistencia == "Pendiente")
                                        {
                                            <span class="badge bg-warning text-dark">@cita.Estado_Asistencia</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@cita.Estado_Asistencia</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle me-2"></i> No se encontraron citas con los filtros seleccionados
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div id="paginationContainer" class="d-flex justify-content-center mt-3"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var rowsPerPage = 5; // Número de comentarios por página
            var $rows = $("#comentariosBody tr");
            var totalPages = Math.ceil($rows.length / rowsPerPage);
            var currentPage = 1;

            function showPage(page) {
                var start = (page - 1) * rowsPerPage;
                var end = start + rowsPerPage;

                $rows.hide().slice(start, end).show();
                $("#paginationContainer").html(createPagination(page, totalPages));
            }

            function createPagination(page, total) {
                var pagination = `<nav><ul class="pagination">`;

                if (page > 1) {
                    pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page - 1}">«</a></li>`;
                }

                for (var i = 1; i <= total; i++) {
                    pagination += `<li class="page-item ${i === page ? 'active' : ''}">
                             <a href="#" class="page-link" data-page="${i}">${i}</a>
                            </li>`;
                }

                if (page < total) {
                    pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page + 1}">»</a></li>`;
                }

                pagination += `</ul></nav>`;
                return pagination;
            }

            $(document).on("click", ".page-link", function (e) {
                e.preventDefault();
                var page = $(this).data("page");
                showPage(page);
            });

            showPage(currentPage);
        });
    </script>
}