@model IEnumerable<ProyectoClinica.Models.Cita>
@{
    ViewBag.Title = "Reporte de Citas";
    var especialidades = Model.Select(c => c.Medico.Especialidad).Distinct().OrderBy(e => e).ToList();
}

<style>
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("VistaAdmRep", "Reporte")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>

<center><h2 class="mb-4">Reporte de Citas</h2></center>

<div class="card mb-4 shadow-sm">
    <div class="card-header" style="background-color: #0b7b82; color: white;">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de búsqueda</h5>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("AsistenciaConsulta", "Reporte", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="fechaCita" class="form-label">Fecha de la cita:</label>
                    <input type="date" name="fechaCita" id="fechaCita" class="form-control w-100"
                           value="@(ViewBag.FechaCita == null ? string.Empty : Convert.ToDateTime(ViewBag.FechaCita).ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-4 mb-3">
                    <label for="especialidad" class="form-label">Especialidad:</label>
                    <select name="especialidad" id="especialidad" class="form-control w-100">
                        <option value="">-- Todas las especialidades --</option>
                        @foreach (var esp in especialidades)
                        {
                            <option value="@esp" @(ViewBag.Especialidad != null && ViewBag.Especialidad.ToString() == esp ? "selected" : "")>@esp</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 align-self-end mb-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                        <a href="@Url.Action("AsistenciaConsulta", "Reporte")" class="btn btn-secondary">
                            <i class="fas fa-broom"></i> Limpiar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Listado de Citas</h5>
            <a href="@Url.Action("ExportarExcel", "Reporte", new { fechaCita = ViewBag.FechaCita, especialidad = ViewBag.Especialidad })"
               class="btn btn-success btn-sm">
                <i class="fas fa-file-excel"></i> Exportar a Excel
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Fecha</th>
                        <th>Especialidad</th>
                        <th>Paciente</th>
                        <th>Síntomas</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var cita in Model)
                        {
                            <tr>
                                <td>@cita.Fecha_Cita.ToString("dd/MM/yyyy")</td>
                                <td>@cita.Medico.Especialidad</td>
                                <td>@cita.Nombre_Paciente</td>
                                <td>@cita.Sintomas</td>
                                <td>
                                    @if (cita.Estado_Asistencia == "Asistió")
                                    {
                                        <span class="badge bg-success">@cita.Estado_Asistencia</span>
                                    }
                                    else if (cita.Estado_Asistencia == "No Asistió")
                                    {
                                        <span class="badge bg-danger">@cita.Estado_Asistencia</span>
                                    }
                                    else if (cita.Estado_Asistencia == "Pendiente")
                                    {
                                        <span class="badge bg-warning text-dark">@cita.Estado_Asistencia</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@cita.Estado_Asistencia</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i> No se encontraron citas con los filtros seleccionados
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
        });
    </script>
}