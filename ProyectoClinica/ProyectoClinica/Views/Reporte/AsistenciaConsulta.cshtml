@model IEnumerable<ProyectoClinica.Models.Reporte>

<div class="container">
    <h2 class="mb-4">Filtro de Citas</h2>

    @using (Html.BeginForm("AsistenciaConsulta", "Reporte", FormMethod.Get, new { @class = "mb-4" }))
    {
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="fechaCita">Fecha de Cita:</label>
                    <input type="date" name="fechaCita" id="fechaCita" class="form-control" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="especialidadMedico">Especialidad del Médico:</label>
                    <select name="especialidadMedico" id="especialidadMedico" class="form-control">
                        <option value="">Seleccione Especialidad</option>
                        @foreach (var especialidad in ViewBag.Especialidades)
                        {
                            <option value="@especialidad">@especialidad</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-search"></i> Buscar Citas
                </button>
                <button type="button" class="btn btn-secondary" onclick="limpiarFiltros()">
                    <i class="fa fa-refresh"></i> Limpiar Filtros
                </button>
            </div>
        </div>
    }

    @* Tabla para mostrar resultados *@
    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre del Médico</th>
                    <th>Especialidad</th>
                    <th>Nombre del Paciente</th>
                    <th>Estado de Asistencia</th>
                    <th>Hora de Cita</th>
                    <th>Fecha de Cita</th>
                    <th>Modalidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var cita in Model)
                    {
                        <tr>
                            <td>@(cita.Medico?.Nombre ?? "N/A")</td>
                            <td>@(cita.Medico?.Especialidad ?? "N/A")</td>
                            <td>@(cita.Cita.Nombre_Paciente ?? "N/A")</td>
                            <td>@(cita.Cita.Estado_Asistencia ?? "N/A")</td>
                            <td>@(cita.Cita.Hora_cita.ToString(@"hh\:mm") ?? "N/A")</td>
                            <td>@(cita.Cita.Fecha_Cita.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>@(cita.Cita.Modalidad ?? "N/A")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("DetallesCita", new { id = cita.Id })" class="btn btn-info btn-sm">
                                        <i class="fa fa-eye"></i> Detalles
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No se encontraron citas</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function limpiarFiltros() {
            document.getElementById('fechaCita').value = '';
            document.getElementById('especialidadMedico').selectedIndex = 0;
            document.getElementById('fechaReporte').value = '';
        }
    </script>
}