@model IEnumerable<ProyectoClinica.Models.Cita>
@{
    ViewBag.Title = "Reporte de Citas";
    var especialidades = Model.Select(c => c.Medico.Especialidad).Distinct().OrderBy(e => e).ToList();
}

<style>
    body {
        background-color: #f4f7f6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background: linear-gradient(to right, #0b7b82, #0d9ba5);
        color: white !important;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .custom-btn {
        background: linear-gradient(to right, #0b7b82, #0d9ba5);
        color: white !important;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        font-size: 16px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .custom-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

    .table-hover tbody tr:hover {
        background-color: rgba(11, 123, 130, 0.05);
    }

    .filter-section {
        background-color: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
    }

    .badge {
        font-size: 0.85em;
        padding: 0.4em 0.6em;
    }
</style>

<div class="container-fluid px-4 py-4">
    <div class="row mb-4">
        <div class="row mb-4">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <h2 class="text-center flex-grow-1 mb-0 medical-title">Reporte de Citas</h2>
                <a href="@Url.Action("VistaAdmRep", "Reporte")" class="custom-btn">
                    <i class="fas fa-home"></i> Inicio
                </a>
            </div>
        </div>
    </div>

    <div class="card mb-4 filter-section">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de búsqueda</h5>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("AsistenciaConsulta", "Reporte", FormMethod.Get, new { @class = "form-inline" }))
            {
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="fechaCita" class="form-label">Fecha de la cita:</label>
                        <input type="date" name="fechaCita" id="fechaCita" class="form-control"
                               value="@(ViewBag.FechaCita == null ? string.Empty : Convert.ToDateTime(ViewBag.FechaCita).ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-4">
                        <label for="especialidad" class="form-label">Especialidad:</label>
                        <select name="especialidad" id="especialidad" class="form-select">
                            <option value="">-- Todas las especialidades --</option>
                            @foreach (var esp in especialidades)
                            {
                                <option value="@esp" @(ViewBag.Especialidad != null && ViewBag.Especialidad.ToString() == esp ? "selected" : "")>@esp</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 align-self-end">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                            <a href="@Url.Action("AsistenciaConsulta", "Reporte")" class="btn btn-secondary">
                                <i class="fas fa-broom"></i> Limpiar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Listado de Citas</h5>
                <a href="@Url.Action("ExportarExcel", "Reporte", new { fechaCita = ViewBag.FechaCita, especialidad = ViewBag.Especialidad })"
                   class="btn btn-success btn-sm">
                    <i class="fas fa-file-excel"></i> Exportar a Excel
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Fecha</th>
                            <th>Especialidad</th>
                            <th>Paciente</th>
                            <th>Síntomas</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var cita in Model)
                            {
                                <tr>
                                    <td>@cita.Fecha_Cita.ToString("dd/MM/yyyy")</td>
                                    <td>@cita.Medico.Especialidad</td>
                                    <td>@cita.Nombre_Paciente</td>
                                    <td>@cita.Sintomas</td>
                                    <td>
                                        @if (cita.Estado_Asistencia == "Asistió")
                                        {
                                            <span class="badge bg-success">@cita.Estado_Asistencia</span>
                                        }
                                        else if (cita.Estado_Asistencia == "No Asistió")
                                        {
                                            <span class="badge bg-danger">@cita.Estado_Asistencia</span>
                                        }
                                        else if (cita.Estado_Asistencia == "Pendiente")
                                        {
                                            <span class="badge bg-warning text-dark">@cita.Estado_Asistencia</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@cita.Estado_Asistencia</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle me-2"></i> No se encontraron citas con los filtros seleccionados
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Keep script section for potential future interactions
        });
    </script>
}