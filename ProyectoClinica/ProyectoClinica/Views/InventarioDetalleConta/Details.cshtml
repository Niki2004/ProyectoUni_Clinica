@model ProyectoClinica.Models.Inventario_Detalle_Conta

@{
    ViewBag.Title = "Details";
}


<link href="~/CSS/Detalles.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Detalles del Inventario Contabilidad</h2>

    <div class="form-section">
        <legend>Información del Inventario</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Encabezado</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Id_Inventario_Encabezado)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Departamento</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Departamento.Nombre_Departamento)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Producto</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Producto.Nombre_producto)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Fechas del Inventario</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Fecha de Entrada</div>
                <div class="detail-value">
                    @Html.Raw(Model.Fecha_Entrada.ToString("dd-MM-yyyy"))
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Fecha de Salida</div>
                <div class="detail-value">
                    @(Model.Fecha_Salida.HasValue ? Model.Fecha_Salida.Value.ToString("dd-MM-yyyy") : "")
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Detalles Adicionales</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Cantidad del Stock</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Cantidad_Stock)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Cantidad del Salida</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Cantidad_Salida)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Precio</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Precio)</div>
            </div>
        </div>
    </div>

    <div class="text-center" style="margin-top: 20px;">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id_Inventario_Encabezado }, new { @class = "btn-primary" })
        @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
    </div>
</div>




