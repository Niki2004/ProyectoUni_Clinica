@model ProyectoClinica.Models.Inventario_Detalle_Conta

@{
    ViewBag.Title = "Crear";
}

<link href="~/CSS/Crear.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Crear Inventario Contabilidad</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-section">
            <legend>Información del Inventario</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Id_Inventario_Encabezado, "Encabezado", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Id_Inventario_Encabezado, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Id_Departamento, "Departamento", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Id_Departamento, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Id_Producto, "Producto", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Id_Producto, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Fechas del Inventario</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Entrada, "Fecha de Entrada", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Fecha_Entrada, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Salida, "Fecha de Salida", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Fecha_Salida, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Detalles Adicionales</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Cantidad_Stock, "Cantidad del Stock", new { @class = "control-label" })
                @Html.EditorFor(model => model.Cantidad_Stock, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Cantidad_Salida, "Cantidad del Salida", new { @class = "control-label" })
                @Html.EditorFor(model => model.Cantidad_Salida, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Precio, "Precio", new { @class = "control-label" })
                @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>

        <div class="form-group text-center">
            <input type="submit" value="Crear Inventario" class="btn-primary" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary"})
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

