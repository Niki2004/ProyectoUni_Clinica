@model ProyectoClinica.Models.Inventario_Detalle_Conta

@{
    ViewBag.Title = "Edit";
}

<link href="~/CSS/Editar.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Editar Inventario Contabilidad</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Inventario_Detalle)

        <div class="form-section">
            <legend>Información del Inventario</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">Encabezado</div>
                    <div class="detail-value">
                        @Html.DropDownListFor(model => model.Id_Inventario_Encabezado, 
                            new SelectList(ViewBag.Encabezados ?? new List<SelectListItem>(), "Value", "Text"),
                            "Seleccione un encabezado",
                            new { @class = "form-control" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Departamento</div>
                    <div class="detail-value">
                        @Html.DropDownListFor(model => model.Id_Departamento, 
                            new SelectList(ViewBag.Departamentos ?? new List<SelectListItem>(), "Value", "Text"),
                            "Seleccione un departamento",
                            new { @class = "form-control" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Producto</div>
                    <div class="detail-value">
                        @Html.DropDownListFor(model => model.Id_Producto, 
                            new SelectList(ViewBag.Productos ?? new List<SelectListItem>(), "Value", "Text"),
                            "Seleccione un producto",
                            new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Fechas del Inventario</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">Fecha de Entrada</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Entrada, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Fecha de Salida</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Salida, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Detalles Adicionales</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">Cantidad del Stock</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Cantidad_Stock, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Cantidad del Salida</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Cantidad_Salida, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Precio</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center" style="margin-top: 20px;">
            <input type="submit" value="Guardar" class="btn-primary" style="margin-right: 10px;" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}