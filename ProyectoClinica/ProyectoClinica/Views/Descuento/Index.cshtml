@model IEnumerable<ProyectoClinica.Models.Descuento>

@{
    ViewBag.Title = "Index";
}

<div style="text-align: center; margin-bottom: 20px;">
    @if (User.IsInRole("Secretaria"))
    {
        <a href="@Url.Action("Index", "Factura")" class="custom-btn">
            <i class="fas fa-home"></i> Inicio
        </a>
    }
    else if (User.IsInRole("Contador"))
    {
        <a href="@Url.Action("VistaCON", "Contabilidad")" class="custom-btn">
            <i class="fas fa-home"></i> Inicio
        </a>
    }
</div>


</br>

<h2 class="text-center">Descuentos</h2>

</br>


<p>
    @Html.ActionLink("Crear Descuento", "Create", null, new { @class = "btn-pago" })
</p>

</br>

<style>
    .btn-pago {
        /* Los estilos existentes se mantienen */
        background-color: #0b7b82;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin-top: 5px;
        text-align: center;
    }

        .btn-pago:hover {
            background-color: #0056b3;
        }

    .custom-btn {
        /* Los estilos existentes se mantienen */
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Nuevos estilos para la tabla */
    .table {
        width: 100%;
        font-size: 1rem;
        table-layout: fixed;
    }

        .table th,
        .table td {
            padding: 6px 8px;
            word-wrap: break-word;
            max-width: 150px;
        }

        .table th {
            font-size: 1.1rem;
            background-color: #0b7b82;
            color: white;
        }

        .table td {
            font-size: 1rem;
        }

            /* Ajustar el ancho de las columnas */
            .table th:nth-child(1),
            .table td:nth-child(1) {
                width: 6%;
            }
            /* Registro */

            .table th:nth-child(2),
            .table td:nth-child(2) {
                width: 6%;
            }
            /* Transacción */

            .table th:nth-child(3),
            .table td:nth-child(3) {
                width: 10%;
            }
            /* Cliente */

            .table th:nth-child(4),
            .table td:nth-child(4) {
                width: 8%;
            }
            /* Estatus */

            .table th:nth-child(5),
            .table td:nth-child(5) {
                width: 6%;
            }
            /* Nómina */

            .table th:nth-child(6),
            .table td:nth-child(6) {
                width: 6%;
            }
            /* Monto */

            .table th:nth-child(7),
            .table td:nth-child(7) {
                width: 8%;
            }
            /* Anticipo */

            .table th:nth-child(8),
            .table td:nth-child(8) {
                width: 8%;
            }
            /* Descuento */

            .table th:nth-child(9),
            .table td:nth-child(9) {
                width: 8%;
            }
            /* Ingresos */

            .table th:nth-child(10),
            .table td:nth-child(10) {
                width: 8%;
            }
            /* Pendientes */

            .table th:nth-child(11),
            .table td:nth-child(11) {
                width: 8%;
            }
            /* Sueldos */

            .table th:nth-child(12),
            .table td:nth-child(12) {
                width:  9%;
            }
</style>

<table class="table">
    <tr>
        <th style="padding: 15px;">
            <label>Nombre Descuento</label>
        </th>
        <th style="padding: 15px;">
            <label>Codigo del Descuento</label>
        </th>
        <th style="padding: 15px;">
            <label>Porcentaje del Descuento</label>
        </th>
        <th style="padding: 15px;">
            <label>Limite de Usos</label>
        </th>
        <th style="padding: 15px;">
            <label>Compañia Afiliada</label>
        </th>
        <th style="padding: 15px;">
            <label>Activo</label>
        </th>
        <th style="padding: 15px;">
            <label>Fecha de Creación</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="padding: 15px;">
                @Html.DisplayFor(modelItem => item.Nombre_Descuento)
            </td>
            <td style="padding: 15px;">
                @Html.DisplayFor(modelItem => item.Codigo_Descuento)
            </td>
            <td style="padding: 15px;">
                @Html.DisplayFor(modelItem => item.Porcentaje_Descuento)
            </td>
            <td style="padding: 15px;">
                @Html.DisplayFor(modelItem => item.Limite_Usos)
            </td>
            <td style="padding: 15px;">
                @Html.DisplayFor(modelItem => item.Compania_Afiliada)
            </td>
            <td style="padding: 15px;">
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td style="padding: 15px;">
                @Html.DisplayFor(modelItem => item.Fecha_Creacion)
            </td>
            <td style="padding: 12px;">
                @Html.ActionLink("Detalle", "Details", new { id = item.Id_Descuento }, new { @class = "btn-pago" })
            </td>
        </tr>
    }

</table>
