@model ProyectoClinica.Models.Movimientos_Bancarios

@{
    ViewBag.Title = "Editar Movimientos Bancarios";
}

<link href="~/CSS/Editar.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Detalles de Movimientos Bancarios</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Movimiento)

        <div class="form-section">
            <legend>Detalles del Movimiento Bancariario</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Id_Diario, "Diario  Contable", new { @class = "control-label" })</div>
                    <div class="detail-value">
                        @Html.DropDownList("Id_Diario", ViewBag.Diarios_Contables as SelectList, "Seleccione una opción", new { @class = "form-control" })
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Id_Conciliacion, "Conciliación Bancaria", new { @class = "control-label" })</div>
                    <div class="detail-value">
                        @Html.DropDownList("Id_Conciliacion", ViewBag.Conciliaciones_Bancarias as SelectList, "Seleccione una opción", new { @class = "form-control" })
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Id_Pago, "Pago", new { @class = "control-label" })</div>
                    <div class="detail-value">
                        @Html.DropDownList("Id_Pago", ViewBag.Pagos as SelectList, "Seleccione una opción", new { @class = "form-control" })
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Id_Banco, "Banco", new { @class = "control-label" })</div>
                    <div class="detail-value">
                        @Html.DropDownList("Id_Banco", ViewBag.Bancos as SelectList, "Seleccione una opción", new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Información del Movimiento Bancario</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Ingresos, "Ingresos", new { @class = "control-label" })</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Ingresos, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Egresos, "Egresos", new { @class = "control-label" })</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Egresos, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Saldo, "Saldo", new { @class = "control-label" })</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Saldo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Información de Registro del Movimiento Bancario</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Movimiento, "Fecha del Movimiento", new { @class = "control-label" })</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Movimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Descripcion, "Descripcion", new { @class = "control-label" })</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center" style="margin-top: 20px;">
            <input type="submit" value="Guardar Cambios" class="btn-primary" style="margin-right: 10px;" />
            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>