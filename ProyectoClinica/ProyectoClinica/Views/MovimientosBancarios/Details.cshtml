@model ProyectoClinica.Models.Movimientos_Bancarios

@{
    ViewBag.Title = "Detalles Movimientos Bancarios";
}


<link href="~/CSS/Detalles.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Detalles de Movimientos Bancarios</h2>

    <div class="form-section">
        <legend>Detalles del Movimiento Bancario</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Código del Diario Contable</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Diarios_Contables.Codigo_Diario)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Conciliación Bancaria</div>
                <div class="detail-value">@Html.Raw(Model.Conciliaciones_Bancarias.Fecha_Conciliacion.ToString("dd-MM-yyyy"))</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Pago</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Pagos.Beneficiario)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Banco</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Bancos.Nombre_Banco)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Información del Movimiento Bancario</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Ingresos</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Ingresos)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Egresos</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Egresos)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Saldo</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Saldo)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Información de Registro del Movimiento Bancario</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Fecha del Movimiento</div>
                <div class="detail-value">@Html.Raw(Model.Fecha_Movimiento.ToString("dd-MM-yyyy"))</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Descripción</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Descripcion)</div>
            </div>
        </div>
    </div>

    <div class="text-center" style="margin-top: 20px;">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id_Movimiento }, new { @class = "btn-primary" })
        @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn-secondary" })
    </div>
</div>
