@model IEnumerable<ProyectoClinica.Models.Movimientos_Bancarios>

@{
    ViewBag.Title = "Movimientos Bancarios";
    var totalIngresos = Model.Sum(m => (int?)m.Ingresos) ?? 0;
    var totalEgresos = Model.Sum(m => (int?)m.Egresos) ?? 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Movimientos Bancarios</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/CSS/Tablas.css" rel="stylesheet" />
</head>
<body>
    <div class="header-container" style="display: flex; justify-content: center; align-items: center; width: 100%; margin: 0 auto; max-width: 1200px;">
        <div class="header-container" style="display: flex; justify-content: center; align-items: center; width: 100%; margin: 0 auto; max-width: 1200px;">
            <div style="display: flex; align-items: center; justify-content: space-between; width: 100%;">
                @if (User.IsInRole("Administrador"))
                {
                    <a href="@Url.Action("VistaCON", "Contabilidad")" class="btn-inicio" style="margin-bottom: 20px; margin-top: 10px; display: inline-block;">
                        <i class="fas fa-home"></i> Inicio
                    </a>
                }
                @if (User.IsInRole("Auditor"))
                {
                    <a href="@Url.Action("IndexAUD", "Contabilidad")" class="btn-inicio" style="margin-bottom: 20px; margin-top: 10px; display: inline-block;">
                        <i class="fas fa-home"></i> Inicio
                    </a>
                }
                <div class="page-title-container" style="position: absolute; left: 50%; transform: translateX(-50%);">
                    <h1 class="page-title">Movimientos Bancarios</h1>
                </div>
                <div style="margin-right: 20px; display: flex; justify-content: flex-end; width: 200px;">
                    <a href="@Url.Action("Create")" class="btn-crear-pago">
                        <i class="fas fa-plus-circle"></i> Crear Movimiento
                    </a>
                </div>
            </div>
        </div>
    </div>

    <br>
    <br>

    <!-- Información de totales -->
    <div class="alert alert-info" style="text-align: center; padding: 15px; background-color: #d1ecf1; border: 1px solid #bee5eb; border-radius: 8px; margin-bottom: 20px;">
        <strong>Total Ingresos:</strong> @totalIngresos.ToString("C") |
        <strong>Total Egresos:</strong> @totalEgresos.ToString("C")
    </div>

    <!-- Tarjetas de Movimientos Bancarios -->
    <div class="cards-container">
        @foreach (var item in Model)
        {
            <div class="payment-card">
                <div class="card-status-chip @(item.Saldo > 0 ? "movimiento-pagado" : "movimiento-pendiente")">
                    @(item.Saldo > 0 ? "Con Saldo" : "Sin Saldo")
                </div>
                <div class="card-header">
                    <div class="card-id">Banco: @item.Bancos.Nombre_Banco</div>
                    <div class="card-date">@String.Format("{0:dd/MM/yyyy}", item.Fecha_Movimiento)</div>
                </div>
                <div class="card-body">
                    <div class="card-info">
                        <div class="info-label">Ingresos:</div>
                        <div class="info-value"><i class="fas">₡</i> @item.Ingresos</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Egresos:</div>
                        <div class="info-value"><i class="fas">₡</i> @item.Egresos</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Saldo:</div>
                        <div class="info-value"><i class="fas">₡</i> @item.Saldo</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Diario:</div>
                        <div class="info-value">@item.Diarios_Contables.Codigo_Diario</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Descripción:</div>
                        <div class="info-value">@item.Descripcion</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="card-user">
                        <i class="fas fa-credit-card"></i> @item.Pagos.Beneficiario
                    </div>
                    <div class="card-actions">
                        <a href="@Url.Action("Details", new { id = item.Id_Movimiento })" class="btn-action">
                            <i class="fas fa-info-circle"></i> Detalle
                        </a>
                        @if (item.Saldo > 0)
                        {
                            <a href="@Url.Action("AjustesBancarios", "MovimientosBancarios", new { id = item.Id_Movimiento })" class="btn-action">
                                <i class="fas fa-cog"></i> Ajustes
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
        @if (!Model.Any())
        {
            <div class="empty-state" style="grid-column: 1 / -1;">
                <i class="fas fa-university"></i>
                <p>No se encontraron movimientos bancarios registrados</p>
                <a href="@Url.Action("Create")" class="btn-crear-pago">
                    <i class="fas fa-plus-circle"></i> Crear Nuevo Movimiento
                </a>
            </div>
        }
    </div>

    <div id="paginationCards" class="d-flex justify-content-center mt-3"></div>

    
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            var rowsPerPage = 5;
            var $cards = $(".payment-card");
            var totalPagesCards = Math.ceil($cards.length / rowsPerPage);
            var currentPageCards = 1;

            function showPage(page, items, totalPages, container) {
                var start = (page - 1) * rowsPerPage;
                var end = start + rowsPerPage;

                items.hide().slice(start, end).show();
                $(container).html(createPagination(page, totalPages, container));
            }

            function createPagination(page, total, container) {
                var pagination = `<nav><ul class="pagination">`;

                if (page > 1) {
                    pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page - 1}" data-container="${container}">«</a></li>`;
                }

                for (var i = 1; i <= total; i++) {
                    pagination += `<li class="page-item ${i === page ? 'active' : ''}">
                                         <a href="#" class="page-link" data-page="${i}" data-container="${container}">${i}</a>
                                       </li>`;
                }

                if (page < total) {
                    pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page + 1}" data-container="${container}">»</a></li>`;
                }

                pagination += `</ul></nav>`;
                return pagination;
            }

            $(document).on("click", ".page-link", function (e) {
                e.preventDefault();
                var page = $(this).data("page");
                var container = $(this).data("container");

                if (container === "#paginationCards") {
                    showPage(page, $cards, totalPagesCards, "#paginationCards");
                }
            });

            showPage(currentPageCards, $cards, totalPagesCards, "#paginationCards");
        });
    </script>
}
