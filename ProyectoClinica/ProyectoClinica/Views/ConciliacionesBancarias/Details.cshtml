@model ProyectoClinica.Models.Conciliaciones_Bancarias

@{
    ViewBag.Title = "Detalles de Conciliación Bancaria";
}

<link href="~/CSS/Detalles.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Detalles de Conciliación Bancaria</h2>

    <div class="form-section">
        <legend>Información Básica</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Tipo de Banco</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Bancos.Nombre_Banco)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Código de Diario</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Diarios_Contables.Codigo_Diario)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Tipo de Registro</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Tipo_Registro.Nombre)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Detalles Adicionales</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Fecha de Conciliación</div>
                <div class="detail-value"> @Html.Raw(Model.Fecha_Conciliacion.ToString("dd-MM-yyyy"))</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Saldo Contable</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Saldo_Contable)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Saldo Bancario</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Saldo_Banco)</div>
            </div>
        </div>
    </div>

    <div class="text-center" style="margin-top: 20px;">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id_Conciliacion }, new { @class = "btn-primary" })
        @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
    </div>
</div>
