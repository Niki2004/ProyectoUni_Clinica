@model ProyectoClinica.Models.Conciliaciones_Bancarias

@{
    ViewBag.Title = "Crear Conciliación Bancaria";
}

<link href="~/CSS/Crear.css" rel="stylesheet" />


<div class="container-form">
    <h2 class="page-title">Crear Conciliación Bancaria</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-section">
    <legend>Información Bancaria</legend>

    <div class="form-group">
        @Html.LabelFor(model => model.Id_Banco, "Banco", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.DropDownList("Id_Banco", ViewBag.Banco as SelectList, "Seleccione una opción", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_Banco, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Id_Diario, "Diario", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.DropDownList("Id_Diario", ViewBag.Diarios_Contables as SelectList, "Seleccione una opción", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_Diario, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Id_Tipo_Registro, "Tipo de Registro", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.DropDownList("Id_Tipo_Registro", ViewBag.TipoRegistro as SelectList, "Seleccione una opción", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_Tipo_Registro, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

        <div class="form-section">
            <legend>Detalles de la Conciliación</legend>

            <div class="form-group">
                @Html.LabelFor(model => model.Fecha_Conciliacion, "Fecha de Conciliación", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(model => model.Fecha_Conciliacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.Fecha_Conciliacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Saldo_Contable, "Saldo Conciliado", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Saldo_Contable, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Saldo_Contable, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Saldo_Banco, "Saldo del Banco", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Saldo_Banco, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Saldo_Banco, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="text-center" style="margin-top: 20px;">
            <input type="submit" value="Guardar" class="btn-primary" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
