@model ProyectoClinica.Models.Departamentos

@{
    ViewBag.Title = "Edit";
}

<link href="~/CSS/Editar.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Editar Departamento</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Departamento)

        <div class="form-section">
            <legend>Información del Departamento</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Nombre_Departamento, "Nombre del Departamento")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Nombre_Departamento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre_Departamento, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Descripcion, "Descripcion")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Fechas</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Creacion, "Fecha de Creación")</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Creacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_Creacion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Actualizacion, "Fecha de Actualización")</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Actualizacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_Actualizacion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Eliminacion, "Fecha de Eliminación")</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Eliminacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_Eliminacion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Información de Registro</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Id_Usuario_Creador, "Usuario Registro")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Id_Usuario_Creador, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Id_Usuario_Creador, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Estatus, "Estado")</div>
                    <div class="detail-value">
                        @Html.DropDownListFor(model => model.Estatus,
                            new List<SelectListItem> {
                                new SelectListItem { Text = "Activo", Value = "true", Selected = (Model?.Estatus == true) },
                                new SelectListItem { Text = "Inactivo", Value = "false", Selected = (Model?.Estatus == false) }
                            },
                            new { @class = "form-control estatus-dropdown" })
                        @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center" style="margin-top: 20px;">
            <input type="submit" value="Guardar" class="btn-primary" style="margin-right: 10px;" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
