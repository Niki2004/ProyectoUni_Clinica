@model IEnumerable<ProyectoClinica.Models.Departamentos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Nombre del Departamento</label>
        </th>
        <th>
            <label>Descripción</label>
        </th>
        <th>
            <label>Fecha de Creación</label>
        </th>
        <th>
            <label>Fecha de Actualización</label>
        </th>
        <th>
            <label>Fecha de Eliminación</label>
        </th>
        <th>
            <label>Estatus</label>
        </th>
        <th>
            <label>Id Creador del Usuario</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Departamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            <label>@String.Format("{0:dd/MM/yyyy}", item.Fecha_Creacion)</label>
        </td>
        <td>
            <label>@String.Format("{0:dd/MM/yyyy}", item.Fecha_Actualizacion)</label>
        </td>
        <td>
            <label>@String.Format("{0:dd/MM/yyyy}", item.Fecha_Eliminacion)</label>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Usuario_Creador)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id_Departamento }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id_Departamento }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id_Departamento })
        </td>
    </tr>
}

</table>
