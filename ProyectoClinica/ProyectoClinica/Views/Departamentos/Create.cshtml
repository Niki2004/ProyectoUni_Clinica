@model ProyectoClinica.Models.Departamentos

@{
    ViewBag.Title = "Create";
}

<link href="~/CSS/Crear.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Crear Nuevo Departamento</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-section">
            <legend>Información del Departamento</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre_Departamento, "Nombre del Departamento", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Nombre_Departamento, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, "Descripcion", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Fechas</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Creacion, "Fecha de Creación", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Fecha_Creacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Actualizacion, "Fecha de Actualización", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Fecha_Actualizacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Eliminacion, "Fecha de Eliminación", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Fecha_Eliminacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

            </div>
        </div>

        <div class="form-section">
            <legend>Información de Registro</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Id_Usuario_Creador, "Usuario Registro", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Id_Usuario_Creador, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Estatus, "Estado", new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.Estatus,
                        new List<SelectListItem> {
                            new SelectListItem { Text = "Activo", Value = "true", Selected = (Model?.Estatus == true) },
                            new SelectListItem { Text = "Inactivo", Value = "false", Selected = (Model?.Estatus == false) }
                        },
                        new { @class = "form-control estatus-dropdown" })
                    @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Crear Departamento" class="btn-primary" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}