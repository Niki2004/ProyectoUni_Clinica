@model ProyectoClinica.Models.Contabilidad

@{
    ViewBag.Title = "Contabilidad";
}
<link rel="stylesheet" href="~/CSS/Crear.css" /> @*Link de los estilos*@

<div class="container-form">
    <h2 class="page-title">Crear Contabilidad</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-section">
                <legend>Información Básica </legend>
                    <div class="form-grid">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Id_Tipo_Registro, "Tipo Registro", new { @class = "control-label" })
                            @Html.DropDownList("Id_Tipo_Registro", ViewBag.TipoRegistro as SelectList, "Seleccione una opción", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Id_Estado_Contabilidad, "Estado Contabilidad", new { @class = "control-label" })
                            @Html.DropDownList("Id_Estado_Contabilidad", ViewBag.Estado_Contabilidad as SelectList, "Seleccione una opción", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Id_Tipo_Transaccion, "Tipo Transacción", new { @class = "control-label" })
                            @Html.DropDownList("Id_Tipo_Transaccion", ViewBag.TipoTransaccion as SelectList, "Seleccione una opción", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ClienteProveedor, "Cliente/Proveedor", new { @class = "control-label" })
                            @Html.EditorFor(model => model.ClienteProveedor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ClienteProveedor, "", new { @class = "text-danger" })
                        </div>
                    </div>
            </div>

            <div class="form-section">
                <legend> Fechas</legend>
                    <div class="form-grid">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Fecha_Registro, "Fecha Registro", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Fecha_Registro, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Fecha_Vencimiento, "Fecha Vencimiento", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Fecha_Vencimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Fecha_Cierre, "Fecha Cierre", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Fecha_Cierre, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        </div>
                    </div>
</div>

            <div class="form-section">
                <legend>Información Financiera </legend>
                <div class="form-grid">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Monto, "Monto", new { @class = "control-label" })
                        @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Monto_Anticipo, "Monto Anticipo", new { @class = "control-label" })
                        @Html.EditorFor(model => model.Monto_Anticipo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Impuesto_Aplicado, "Impuesto", new { @class = "control-label" })
                        @Html.EditorFor(model => model.Impuesto_Aplicado, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Descuento_Aplicado, "Descuento", new { @class = "control-label" })
                        @Html.EditorFor(model => model.Descuento_Aplicado, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

            <div class="form-section">
                 <legend>Totales y Estado </legend>
                <div class="form-grid">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ingresos_Totales, "Ingresos Totales", new { @class = "control-label" })
                        @Html.EditorFor(model => model.Ingresos_Totales, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Total_Pagos_Pendientes, "Pagos Pendientes", new { @class = "control-label" })
                        @Html.EditorFor(model => model.Total_Pagos_Pendientes, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Total_Sueldos, "Total Sueldos", new { @class = "control-label" })
                        @Html.EditorFor(model => model.Total_Sueldos, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Conta_pago, "Estado del Pago", new { @class = "control-label" })
                        @Html.EditorFor(model => model.Conta_pago, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Estatus_pago, "Estatus del Pago", new { @class = "control-label" })
                        @Html.EditorFor(model => model.Estatus_pago, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

            <div class="form-section">
                <legend>Comentarios y Observaciones </legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.Comentarios, new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Comentarios, new { @class = "form-control", rows = "3" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Observaciones_Ingresos, "Observaciones Ingresos", new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Observaciones_Ingresos, new { @class = "form-control", rows = "3" })
                </div>
            </div>

            <div class="form-section">
                 <legend>Usuario </legend>
                <div class="form-group">
                    <label for="Id_Usuario">Usuario Responsable</label>
                    @Html.DropDownListFor(model => model.Id, (SelectList)ViewBag.Usuarios, "Seleccionar Usuario", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Crear Contabilidad" class="btn-primary"/>
                @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary"})
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}