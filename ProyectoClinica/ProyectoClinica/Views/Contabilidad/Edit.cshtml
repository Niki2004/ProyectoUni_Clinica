@model ProyectoClinica.Models.Contabilidad

@{
    ViewBag.Title = "Editar Contabilidad";
}

<link href="~/CSS/Editar.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Editar Contabilidad</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Contabilidad)

        <div class="form-section">
            <legend>Información Básica</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Id_Tipo_Registro, "Tipo Registro")</div>
                    <div class="detail-value">
                        @Html.DropDownList("Id_Tipo_Registro", ViewBag.TipoRegistro as SelectList, "Seleccione una opción", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Id_Tipo_Registro, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Id_Estado_Contabilidad, "Estado Contabilidad")</div>
                    <div class="detail-value">
                        @Html.DropDownList("Id_Estado_Contabilidad", ViewBag.Estado_Contabilidad as SelectList, "Seleccione una opción", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Id_Estado_Contabilidad, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Id_Tipo_Transaccion, "Tipo Transacción")</div>
                    <div class="detail-value">
                        @Html.DropDownList("Id_Tipo_Transaccion", ViewBag.TipoTransaccion as SelectList, "Seleccione una opción", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Id_Tipo_Transaccion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.ClienteProveedor, "Cliente/Proveedor")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.ClienteProveedor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ClienteProveedor, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Estado del Pago</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Conta_pago, "Estado del Pago")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Conta_pago, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Conta_pago, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Estatus_pago, "Estatus del Pago")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Estatus_pago, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Estatus_pago, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Fechas</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Registro, "Fecha Registro")</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Registro, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_Registro, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Vencimiento, "Fecha Vencimiento")</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Vencimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_Vencimiento, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Cierre, "Fecha Cierre")</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Cierre, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_Cierre, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Información Financiera</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Monto)</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Monto_Anticipo, "Monto Anticipo")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Monto_Anticipo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Monto_Anticipo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Impuesto_Aplicado, "Impuesto Aplicado")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Impuesto_Aplicado, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Impuesto_Aplicado, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Descuento_Aplicado, "Descuento Aplicado")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Descuento_Aplicado, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descuento_Aplicado, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Totales</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Ingresos_Totales, "Ingresos Totales")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Ingresos_Totales, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Ingresos_Totales, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Total_Pagos_Pendientes, "Pagos Pendientes")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Total_Pagos_Pendientes, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Total_Pagos_Pendientes, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Total_Sueldos, "Total Sueldos")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Total_Sueldos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Total_Sueldos, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Comentarios y Observaciones</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Comentarios)</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Comentarios, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Comentarios, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Observaciones_Ingresos, "Observaciones Ingresos")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Observaciones_Ingresos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Observaciones_Ingresos, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Usuario Asignado</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">Usuario</div>
                    <div class="detail-value">
                        @Html.DropDownListFor(model => model.Id, (SelectList)ViewBag.Usuarios, "Seleccionar Usuario", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center" style="margin-top: 20px;">
            <input type="submit" value="Guardar" class="btn-primary" style="margin-right: 10px;" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>
