@model IEnumerable<ProyectoClinica.Models.Contabilidad>

@{
    ViewBag.Title = "Contabilidad";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Contabilidad</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/CSS/Tablas.css" rel="stylesheet" />
</head>
<body>
    <div class="header-container" style="display: flex; justify-content: center; align-items: center; width: 100%; margin: 0 auto; max-width: 1200px;">
        <div class="header-container" style="display: flex; justify-content: center; align-items: center; width: 100%; margin: 0 auto; max-width: 1200px;">
            <div style="display: flex; align-items: center; justify-content: space-between; width: 100%;">
                <a href="@Url.Action("VistaCON", "Contabilidad")" class="btn-inicio">
                    <i class="fas fa-home"></i> Inicio
                </a>
                <div class="page-title-container" style="position: absolute; left: 50%; transform: translateX(-50%);">
                    <h1 class="page-title">Gestión de Contabilidad</h1>
                </div>
                <a href="@Url.Action("Create")" class="btn-crear-pago">
                    <i class="fas fa-plus-circle"></i> Crear Contabilidad
                </a>
            </div>
        </div>
    </div>

    <br>
    <br>

    <!-- Acciones adicionales específicas de contabilidad -->
    <div style="text-align: right; max-width: 1200px; margin: 0 auto; padding: 0 20px;">
        <a href="@Url.Action("CierreMensual")" class="btn-crear-pago" style="margin-right: 10px;">
            <i class="fas fa-calendar-check"></i> Cierre Mensual
        </a>
        <a href="@Url.Action("CierreAnual")" class="btn-crear-pago">
            <i class="fas fa-calendar-alt"></i> Cierre Anual
        </a>
    </div>

    <br>

    <!-- Tarjetas de Contabilidad -->
    <div class="cards-container">
        @foreach (var item in Model)
        {
            <div class="payment-card">
             <div class="card-status-chip @(item.Conta_pago == "En Proceso" ? "estado-contabilidad-pendiente" :
                            item.Conta_pago == "Completado" ? "estado-contabilidad-pagado" :
                            "estado-contabilidad-otro")">
                 @item.Conta_pago
             </div>
                <div class="card-header">
                    <div class="card-id">@item.Tipo_Registro.Nombre</div>
                    <div class="card-date">@item.Tipo_Transaccion.Nombre</div>
                </div>
                <div class="card-body">
                    <div class="card-amount">
                        <i class="fas">₡</i> @item.Monto
                    </div>
                    <div class="card-info">
                        <div class="info-label">Cliente/Proveedor:</div>
                        <div class="info-value">@item.ClienteProveedor</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Estatus:</div>
                        <div class="info-value">@item.Estatus_pago</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Anticipo:</div>
                        <div class="info-value">₡ @item.Monto_Anticipo</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Descuento:</div>
                        <div class="info-value">₡ @item.Descuento_Aplicado</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Ingresos:</div>
                        <div class="info-value">₡ @item.Ingresos_Totales</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Pendientes:</div>
                        <div class="info-value">₡ @item.Total_Pagos_Pendientes</div>
                    </div>
                    <div class="card-info">
                        <div class="info-label">Sueldos:</div>
                        <div class="info-value">₡ @item.Total_Sueldos</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="card-user">
                        <i class="fas fa-user"></i> ID: @item.Id_Contabilidad
                    </div>
                    <div>
                        <a href="@Url.Action("Details", new { id = item.Id_Contabilidad })" class="btn-action">
                            <i class="fas fa-info-circle"></i> Detalle
                        </a>
                        @if (item.Tipo_Registro.Nombre == "Pago de Nómina")
                        {
                            <a href="@Url.Action("Index", "PagosXNomina", new { id = item.Id_Contabilidad })" class="btn-action" style="margin-left: 5px;">
                                <i class="fas fa-sync-alt"></i> Actualizar
                            </a>
                        }
                        else if ((item.Tipo_Registro.Nombre == "Ingreso" || item.Tipo_Registro.Nombre == "Egreso") && item.Conta_pago == "En Proceso")
                        {
                            <a href="@Url.Action("Index", "PagosXNomina", new { id = item.Id_Contabilidad })" class="btn-action" style="margin-left: 5px;">
                                <i class="fas fa-clipboard-list"></i> Nómina
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
        @if (!Model.Any())
        {
            <div class="empty-state" style="grid-column: 1 / -1;">
                <i class="fas fa-calculator"></i>
                <p>No se encontraron registros contables</p>
                <a href="@Url.Action("Create")" class="btn-crear-pago">
                    <i class="fas fa-plus-circle"></i> Crear Contabilidad
                </a>
            </div>
        }
    </div>

    <div id="paginationCards" class="d-flex justify-content-center mt-3"></div>
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            var rowsPerPage = 5;
            var $cards = $(".payment-card");
            var totalPagesCards = Math.ceil($cards.length / rowsPerPage);
            var currentPageCards = 1;

            function showPage(page, items, totalPages, container) {
                var start = (page - 1) * rowsPerPage;
                var end = start + rowsPerPage;

                items.hide().slice(start, end).show();
                $(container).html(createPagination(page, totalPages, container));
            }

            function createPagination(page, total, container) {
                var pagination = `<nav><ul class="pagination">`;

                if (page > 1) {
                    pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page - 1}" data-container="${container}">«</a></li>`;
                }

                for (var i = 1; i <= total; i++) {
                    pagination += `<li class="page-item ${i === page ? 'active' : ''}">
                                         <a href="#" class="page-link" data-page="${i}" data-container="${container}">${i}</a>
                                       </li>`;
                }

                if (page < total) {
                    pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page + 1}" data-container="${container}">»</a></li>`;
                }

                pagination += `</ul></nav>`;
                return pagination;
            }

            $(document).on("click", ".page-link", function (e) {
                e.preventDefault();
                var page = $(this).data("page");
                var container = $(this).data("container");

                if (container === "#paginationCards") {
                    showPage(page, $cards, totalPagesCards, "#paginationCards");
                }
            });

            showPage(currentPageCards, $cards, totalPagesCards, "#paginationCards");
        });
    </script>
}