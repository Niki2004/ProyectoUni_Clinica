@model ProyectoClinica.Models.Contabilidad

@{
    ViewBag.Title = "Detalles de Contabilidad";
}

<link href="~/CSS/Detalles.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Detalles de Contabilidad</h2>

    <div class="form-section">
        <legend>Información Básica</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Tipo de Registro</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Id_Tipo_Registro)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Estado de Contabilidad</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Id_Estado_Contabilidad)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Tipo de Transacción</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Id_Tipo_Transaccion)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Cliente/Proveedor</div>
                <div class="detail-value">@Html.DisplayFor(model => model.ClienteProveedor)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Estado del Pago</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Estado del Pago</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Conta_pago)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Estatus del Pago</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Estatus_pago)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Fechas</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Fecha de Registro</div>
                <div class="detail-value"> @Html.Raw(Model.Fecha_Registro.ToString("dd-MM-yyyy"))</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Fecha de Vencimiento</div>
                <div class="detail-value"> @Html.Raw(Model.Fecha_Vencimiento.ToString("dd-MM-yyyy"))</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Fecha de Cierre</div>
                <div class="detail-value">@Html.Raw(Model.Fecha_Cierre.ToString("dd-MM-yyyy"))</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Información Financiera</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Monto</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Monto)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Monto Anticipo</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Monto_Anticipo)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Impuesto Aplicado</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Impuesto_Aplicado)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Descuento Aplicado</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Descuento_Aplicado)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Totales</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Ingresos Totales</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Ingresos_Totales)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Pagos Pendientes</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Total_Pagos_Pendientes)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Total Sueldos</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Total_Sueldos)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Comentarios y Observaciones</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Comentarios</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Comentarios)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Observaciones de Ingresos</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Observaciones_Ingresos)</div>
            </div>
        </div>
    </div>

    <div class="text-center" style="margin-top: 20px;">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id_Contabilidad }, new { @class = "btn-primary" })
        @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
    </div>
</div>
