@{
    ViewBag.Title = "Respaldo de Documentos";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        font-size: 14px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        cursor: pointer;
    }

    .custom-btn:hover {
        background-color: #09686e !important;
        text-decoration: none;
    }

    .upload-form {
        margin-top: 20px;
        padding: 20px;
        background: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .file-input {
        margin: 10px 0;
    }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .header {
        text-align: center;
        margin-bottom: 30px;
    }

    .header h2 {
        color: #0b7b82;
        margin-bottom: 10px;
    }

    .header p {
        color: #666;
        font-size: 16px;
    }
</style>

<div class="container">
    <div class="header">
        <h2>Respaldo de Documentos</h2>
        <p>Sube y guarda tus documentos importantes de manera segura</p>
    </div>

    <center>
        <a href="@Url.Action("Expedientes", "Expedientes")" class="btn custom-btn">
            <i class="fas fa-home"></i> Inicio
        </a>
    </center>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="upload-form">
        <h3>Guardar Documento</h3>
        @using (Html.BeginForm("SubirADrive", "Expedientes", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="file-input">
                <input type="file" name="archivo" class="form-control" accept=".pdf,.doc,.docx" required />
            </div>
            <button type="submit" class="btn custom-btn">
                <i class="fas fa-save"></i> Guardar Documento
            </button>
        }
    </div>
</div>

