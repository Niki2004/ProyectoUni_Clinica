@model ProyectoClinica.Models.Pagos_Diarios
@{
    ViewBag.Title = "Crear Pagos Diarios";
}

<link href="~/CSS/Crear.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Crear Pagos Diario</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-section">
            <legend>Información Bancaria</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Id_Contabilidad, "Contabilidad", new { @class = "control-label" })
                    @Html.DropDownList("Id_Contabilidad", ViewBag.Contabilidad as SelectList, "Seleccione una opción", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Id_Empleado, "Empleado", new { @class = "control-label" })
                    @Html.DropDownList("Id_Empleado", ViewBag.Empleado as SelectList, "Seleccione una opción", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Detalles del Pago</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Pago, "Fecha de Pago", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Fecha_Pago, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Monto, "Monto", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Metodo_Pago, "Método de Pago", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Metodo_Pago, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Detalles Adicionales</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Observaciones, "Observaciones", new { @class = "control-label" })
                @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Estado_Pago, "Estado del Pago", new { @class = "control-label" })
                @Html.EditorFor(model => model.Estado_Pago, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>

        <div class="form-section">
            <legend>Información de Registro</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Registro, "Fecha de Registro", new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Fecha_Registro, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Crear Pago" class="btn-primary" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

