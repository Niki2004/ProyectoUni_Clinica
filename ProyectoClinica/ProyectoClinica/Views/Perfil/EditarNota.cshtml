@model ProyectoClinica.Models.Nota_Paciente
@{
    ViewBag.Title = "Editar";
}

<div class="container-form">
    <h2 class="page-title">Modificación de la Nota</h2>

    <style>
        .container-form {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .page-title {
            color: #0b7b82;
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 10px;
            border-bottom: 2px solid #0b7b82;
        }

        fieldset {
            border: 2px solid #0b7b82;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            background: white;
        }

        legend {
            font-size: 1.2em;
            font-weight: bold;
            color: #0b7b82;
            padding: 0 10px;
            width: auto;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #0b7b82;
            border-color: #0b7b82;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #096c72;
                transform: translateY(-1px);
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
                color: white;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            transition: all 0.3s ease;
            display: inline-block;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>

    @using (Html.BeginForm("EditarNota", "Perfil", FormMethod.Post)) // <-- Asegura que esta es la acción correcta
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.HiddenFor(model => model.Id_Nota_Paciente)

                <legend>Información del Paciente</legend>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nota_Del_Paciente, new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Nota_Del_Paciente, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nota_Del_Paciente, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            <!-- Botones -->
            <div class="form-group text-center">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a href="@Url.Action("NotasPersonale", "Perfil")" class="btn btn-secondary">Regresar</a>
            </div>
        </div>
    }
</div>
