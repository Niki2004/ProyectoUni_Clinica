@model IEnumerable<ProyectoClinica.Models.Nota_Paciente>

@{
    ViewBag.Title = "NotasPersonale";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .profile-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 20px;
    }

    .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #007bff;
    }

    .profile-details {
        flex: 1;
    }

    .profile-name {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0;
    }

    .profile-email {
        color: #777;
        font-size: 0.9rem;
    }

    .profile-sections {
        margin-top: 20px;
    }

    .section {
        margin-bottom: 20px;
    }

        .section h3 {
            margin-bottom: 10px;
            color: #000000;
            font-size: 1.2rem;
            border-left: 4px solid #0b7b82;
            padding-left: 8px;
        }

        .section ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .section ul li {
                display: flex;
                align-items: center;
                background: #f9f9f9;
                padding: 10px 15px;
                border-radius: 5px;
                margin-bottom: 10px;
                transition: background 0.3s ease;
            }

                .section ul li:hover {
                    background: #3bb4bc80;
                }

                .section ul li i {
                    /*Color de los iconos*/
                    margin-right: 10px;
                    color: #0b7b82;
                }

    /* Estilos para la tabla */
    table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
    }

    thead {
        background-color: #3bb4bc; /* Verde personalizado */
        color: #fff;
    }

    th,
    td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ddd;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
    }

    a.nav-link {
        display: flex;
        align-items: center;
        color: #0b7b82; /* Color del ícono */
        text-decoration: none;
    }

        a.nav-link:hover {
            text-decoration: underline;
        }
</style>

<center><h2>Notas Personales</h2></center>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Aquí puedes modificarlas</th>
            <th>Aquí puedes eliminarlas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nota_Del_Paciente</td>
                <td>
                    <a class="nav-link" href="@Url.Action("EditarNota", "Perfil", new { id = item.Id_Nota_Paciente })">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                </td>
                <td>
                    <a class="nav-link" href="@Url.Action("EliminarNota", "Perfil", new { id = item.Id_Nota_Paciente })">
                        <i class="fas fa-edit"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


