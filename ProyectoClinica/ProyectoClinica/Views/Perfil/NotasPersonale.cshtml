@model IEnumerable<ProyectoClinica.Models.Nota_Paciente>

@{
    ViewBag.Title = "Notas Personales";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="text-center flex-grow-1 mb-0 medical-title">Notas Personales</h2>
            <a href="@Url.Action("Index", "Perfil")" class="btn custom-medical-btn">
                <i class="fas fa-home me-2"></i>Inicio
            </a>
        </div>
    </div>

    @* Mensajes de notificación *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-medical-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-medical-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card medical-appointment-card">
                    <div class="card-header medical-card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="appointment-header-title">
                                <i class="fas fa-calendar-alt me-2"></i>Nota Personal
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="medical-info-row">
                                 <div class="medical-info-content">
                                     <i class="fas fa-file-alt" style="color: #ACC196; margin-right: 5px;"></i> <span class="medical-info-label">Descripción:</span>
                                      @item.Nota_Del_Paciente
                                 </div>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                    <div class="card-footer medical-card-footer">
                        <a href="@Url.Action("EditarNota", "Perfil", new { id = item.Id_Nota_Paciente })"
                           class="btn btn-medical-edit me-2"
                           data-bs-toggle="tooltip"
                           title="Editar Nota">
                            <i class="fas fa-edit me-2"></i>Editar
                        </a>

                        @using (Html.BeginForm("EliminarNota", "Perfil", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.Id_Nota_Paciente)

                            <button type="submit" class="btn btn-medical-delete" data-bs-toggle="tooltip" title="Eliminar Nota">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </button>
                        }
                    </div>

                </div>
            </div>
        }

        @* No hay notas *@
        @if (!Model.Any())
        {
            <div class="text-center mt-5 medical-empty-state">
                <i class="fas fa-inbox fa-4x mb-3"></i>
                <h4>No hay notas personales registradas</h4>
            </div>
        }
    </div>
</div>



<style>
    :root {
        --medical-primary: #0b7b82;
        --medical-secondary: #3bb4bc;
        --medical-accent-light: #75d3d9;
        --medical-accent-dark: #087078;
        --medical-background: #f4f7f8;
    }

    body {
        background-color: var(--medical-background);
        font-family: 'Arial', sans-serif;
    }

    .medical-title {
        color: var(--medical-primary);
        font-weight: 600;
    }

    .custom-medical-btn {
        background-color: var(--medical-primary);
        color: white !important;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .custom-medical-btn:hover {
            background-color: var(--medical-accent-dark);
            transform: translateY(-2px);
        }

    .medical-appointment-card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 6px 15px rgba(11, 123, 130, 0.1);
    }

        .medical-appointment-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 20px rgba(11, 123, 130, 0.2);
        }

    .medical-card-header {
        background: linear-gradient(135deg, var(--medical-primary), var(--medical-secondary));
        color: white;
        padding: 15px;
    }

    .appointment-header-title {
        font-weight: 600;
        display: flex;
        align-items: center;
    }

    .medical-status-badge {
        font-size: 0.8rem;
        padding: 4px 8px;
        border-radius: 4px;
    }

    .badge-completed {
        background-color: #28a745;
        color: white;
    }

    .badge-pending {
        background-color: #ffc107;
        color: #212529;
    }

    .medical-info-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        background-color: #f9f9f9;
        padding: 8px;
        border-radius: 6px;
    }

    .medical-icon-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        margin-right: 10px;
        color: white;
    }

    .medical-doctor-badge {
        background-color: var(--medical-primary);
    }

    .medical-patient-badge {
        background-color: var(--medical-secondary);
    }

    .medical-info-label {
        font-weight: 600;
        margin-right: 5px;
        color: var(--medical-accent-dark);
    }

    .medical-detail-label {
        color: var(--medical-accent-dark);
        font-size: 0.9rem;
        margin-bottom: 4px;
    }

    .medical-detail-value {
        font-weight: 500;
    }

    .medical-modalidad-badge {
        background-color: var(--medical-accent-light);
        color: var(--medical-primary);
    }

    .medical-card-footer {
        background-color: #f4f7f8;
        display: flex;
        justify-content: flex-end;
    }

    .btn-medical-edit {
        background-color: var(--medical-primary);
        color: white !important;
        border: none;
        padding: 6px 12px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .btn-medical-edit:hover {
            background-color: var(--medical-accent-dark);
            transform: translateY(-2px);
        }

    .btn-medical-delete {
        background-color: #F49097;
        color: white !important;
        border: none;
        padding: 6px 12px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .btn-medical-delete:hover {
            background-color: #CC6B71;
            transform: translateY(-2px);
        }
    .medical-empty-state {
        color: var(--medical-primary);
    }

        .medical-empty-state i {
            color: var(--medical-secondary);
        }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    });
</script>
