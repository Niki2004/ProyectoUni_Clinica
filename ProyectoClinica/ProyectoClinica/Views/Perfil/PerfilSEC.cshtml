@model ProyectoClinica.Models.IndexViewModel

@{
    ViewBag.Title = "Perfil";
}

<!-- Estilos CSS -->
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .profile-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 20px;
    }

    .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #007bff;
    }

    .profile-details {
        flex: 1;
    }

    .profile-name {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0;
    }

    .profile-email {
        color: #777;
        font-size: 0.9rem;
    }

    .profile-sections {
        margin-top: 20px;
    }

    .section {
        margin-bottom: 20px;
    }

        .section h3 {
            margin-bottom: 10px;
            color: #000000;
            font-size: 1.2rem;
            border-left: 4px solid #0b7b82;
            padding-left: 8px;
        }

        .section ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .section ul li {
                display: flex;
                align-items: center;
                justify-content: space-between;
                background: #f9f9f9;
                padding: 10px 15px;
                border-radius: 5px;
                margin-bottom: 10px;
                transition: background 0.3s ease;
            }

                .section ul li:hover {
                    background: #3bb4bc80;
                }

                .section ul li i {
                    margin-right: 10px;
                    color: #0b7b82;
                }

    .badge {
        background-color: #0b7b82;
        color: white;
        font-size: 0.8rem;
        font-weight: bold;
        padding: 4px 8px;
        border-radius: 50%;
        margin-left: auto;
    }

    .text-success {
        color: #28a745;
        font-size: 0.9rem;
    }
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>
<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("VistaSEC", "Factura")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>
<main aria-labelledby="title" class="profile-container">
    <!-- Enlace a Font Awesome para los íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <h2 id="title">@ViewBag.Title</h2>
    <p class="text-success">@ViewBag.StatusMessage</p>

    @if (!string.IsNullOrEmpty(Model.Imagen))
    {
        <img src="@Model.Imagen" alt="Perfil" class="profile-pic" />
    }
    else
    {
        <img src="~/Imagenes/PerfilPorDefecto.jpg" alt="Perfil" class="profile-pic" />
    }

    <div class="profile-details">
        <h2 class="profile-name">@Model.Nombre @Model.Apellido</h2>
        <p class="profile-email">@Model.Email</p>
    </div>

    <div class="profile-sections">
        <div class="section">
            <div class="section">
                <h3>General</h3>
                <ul>

                    @*Cierre se sesión*@
                    <li>
                        <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                            <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                        </a>
                    </li>

                    <form id="logoutForm" action="@Url.Action("Logout", "Account")" method="post" style="display:none;">
                        @Html.AntiForgeryToken()
                    </form>

                </ul>
            </div>
        </div>
</main>
