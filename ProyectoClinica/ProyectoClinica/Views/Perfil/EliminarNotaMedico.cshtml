@model ProyectoClinica.Models.Nota_Medico

@{
    ViewBag.Title = "Eliminar Nota Médica";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow border-0" style="width: 50%;">
        <div class="card-header text-white text-center" style="background-color: #dc3545;">
            <h4 class="mb-0">Eliminar Nota Médica</h4>
        </div>
        <div class="card-body bg-white text-center">
            <h5 class="text-danger">¿Estás seguro de que deseas eliminar esta nota médica?</h5>
            <p class="text-muted">Esta acción no se puede deshacer.</p>
            <hr />

            <dl class="text-start">
                <dt class="fw-bold">Observación:</dt>
                <dd>@Html.DisplayFor(model => model.Observacion)</dd>

                <dt class="fw-bold">Recomendación:</dt>
                <dd>@Html.DisplayFor(model => model.Recomendacion)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn text-white px-4" style="background-color: #dc3545;">Eliminar</button>
                    <a href="@Url.Action("NotasMedicas")" class="btn btn-secondary px-4">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>
