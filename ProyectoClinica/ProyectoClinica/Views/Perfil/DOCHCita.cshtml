@model IEnumerable<ProyectoClinica.Models.Cita>

@{
    ViewBag.Title = "Historial de Citas";
}

<!-- Cargar Bootstrap -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link href="~/CSS/Reportes.css" rel="stylesheet" />

<div class="report-header">
    <h2>Historial de Citas</h2>
    <a href="@Url.Action("PerfilMED", "Perfil")" class="custom-btn home-btn">
        <i class="fas fa-home"></i>
    </a>
</div>

<br />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container">
    <div class="card mb-4 shadow-sm filter-card">
        <div class="card-header" style="background-color: #0b7b82; color: white;">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de búsqueda</h5>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <!-- Formulario de Filtro -->
                <form id="formFiltroCitas" class="mb-4">
                    <div class="row align-items-end">
                        <div class="col-md-4">
                            <label for="tipoConsulta">Tipo de Consulta:</label>
                            <select class="form-control" id="tipoConsulta" name="tipoConsulta">
                                <option value="">Seleccione</option>
                                <option value="virtual">Virtual</option>
                                <option value="presencial">Presencial</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">🔍 Filtrar</button>
                        </div>
                    </div>
                </form>

            </div>
            <!-- Tabla de Citas -->
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="comentariosTable" class="modern-table">
                        <thead>
                            <tr>
                                <th style="word-wrap: break-word; white-space: normal;">Médico</th>
                                <th style="word-wrap: break-word; white-space: normal;">Paciente</th>
                                <th>Estado</th>
                                <th>Hora</th>
                                <th style="word-wrap: break-word; white-space: normal;">Complicaciones</th>
                                <th>Síntomas</th>
                                <th style="word-wrap: break-word; white-space: normal;">Fecha de Cita</th>
                                <th style="word-wrap: break-word; white-space: normal;">Modalidad</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="comentariosBody">
                            @foreach (var cita in Model)
                            {
                                <tr>
                                    <td style="word-wrap: break-word; white-space: normal; max-width: 300px; overflow-wrap: break-word;">@Html.DisplayFor(modelItem => cita.Medico.Nombre)</td>
                                    <td style="word-wrap: break-word; white-space: normal; max-width: 300px; overflow-wrap: break-word;">@Html.DisplayFor(modelItem => cita.Nombre_Paciente)</td>
                                    <td>@Html.DisplayFor(modelItem => cita.Estado_Asistencia)</td>
                                    <td>@Html.DisplayFor(modelItem => cita.Hora_cita)</td>
                                    <td style="word-wrap: break-word; white-space: normal; max-width: 300px; overflow-wrap: break-word;">@Html.DisplayFor(modelItem => cita.Descripcion_Complicaciones)</td>
                                    <td>@Html.DisplayFor(modelItem => cita.Sintomas)</td>
                                    <td style="word-wrap: break-word; white-space: normal; max-width: 300px; overflow-wrap: break-word;">@Html.DisplayFor(modelItem => cita.Fecha_Cita)</td>
                                    <td style="word-wrap: break-word; white-space: normal; max-width: 300px; overflow-wrap: break-word;">@Html.DisplayFor(modelItem => cita.Modalidad)</td>
                                    <td>
                                        <a href="@Url.Action("Nota_Medico", "Perfil")" class="btn btn-info">Nota</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div id="paginationContainer" class="d-flex justify-content-center mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Botones de Notas Adicionales y Médicas -->
<div class="text-center my-4">
    <a href="@Url.Action("NotasAdicionales", "Perfil")" class="btn btn-secondary">Notas Adicionales</a>
    <a href="@Url.Action("NotasMedicas", "Perfil")" class="btn btn-secondary">Notas Médicas</a>
</div>

<script>
    $(document).ready(function () {
        $('#formFiltroCitas').submit(function (e) {
            e.preventDefault();

            var tipoConsulta = $('#tipoConsulta').val();
            $('#comentariosTable tbody').html('<tr><td colspan="9" class="text-center">Cargando...</td></tr>');

            $.ajax({
                url: '@Url.Action("FiltrarCitas", "Perfil")',
                type: 'GET',
                data: { tipoConsulta: tipoConsulta },
                success: function (data) {
                    $('#comentariosTable tbody').empty();

                    if (data && data.length > 0) {
                        data.forEach(function (cita) {
                            var row = '<tr>' +
                                '<td>' + (cita.NombreMedico || '') + '</td>' +
                                '<td>' + (cita.Nombre_Paciente || '') + '</td>' +
                                '<td>' + (cita.Estado_Asistencia || '') + '</td>' +
                                '<td>' + (cita.Hora_cita || '') + '</td>' +
                                '<td>' + (cita.Descripcion_Complicaciones || '') + '</td>' +
                                '<td>' + (cita.Sintomas || '') + '</td>' +
                                '<td>' + (cita.Fecha_Cita || '') + '</td>' +
                                '<td>' + (cita.Modalidad || '') + '</td>' +
                                '<td><a href="@Url.Action("Nota_Medico", "Perfil")" class="btn btn-info">Nota</a></td>' +
                                '</tr>';
                            $('#comentariosTable tbody').append(row);
                        });
                    } else {
                        $('#comentariosTable tbody').html('<tr><td colspan="9" class="text-center">No se encontraron citas.</td></tr>');
                    }
                },
                error: function (xhr, status, error) {
                    $('#comentariosTable tbody').html('<tr><td colspan="9" class="text-center text-danger">Error al cargar las citas: ' + error + '</td></tr>');
                    console.log(xhr.responseText);
                }
            });
        });
    });

    $(document).ready(function () {
        var rowsPerPage = 5; // Número de comentarios por página
        var $rows = $("#comentariosBody tr");
        var totalPages = Math.ceil($rows.length / rowsPerPage);
        var currentPage = 1;

        function showPage(page) {
            var start = (page - 1) * rowsPerPage;
            var end = start + rowsPerPage;

            $rows.hide().slice(start, end).show();
            $("#paginationContainer").html(createPagination(page, totalPages));
        }

        function createPagination(page, total) {
            var pagination = `<nav><ul class="pagination">`;

            if (page > 1) {
                pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page - 1}">«</a></li>`;
            }

            for (var i = 1; i <= total; i++) {
                pagination += `<li class="page-item ${i === page ? 'active' : ''}">
                               <a href="#" class="page-link" data-page="${i}">${i}</a>
                              </li>`;
            }

            if (page < total) {
                pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page + 1}">»</a></li>`;
            }

            pagination += `</ul></nav>`;
            return pagination;
        }

        $(document).on("click", ".page-link", function (e) {
            e.preventDefault();
            var page = $(this).data("page");
            showPage(page);
        });

        showPage(currentPage);
    });
</script>
