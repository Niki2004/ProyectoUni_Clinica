@model IEnumerable<ProyectoClinica.Models.Cita>

@{
    ViewBag.Title = "Historial de Citas";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
<link href="~/CSS/Administrativo.css" rel="stylesheet" />

<div class="page-container">
    <div class="header-container">
        <div style="display: flex; align-items: center; justify-content: space-between; width: 100%;">
            <a href="@Url.Action("PerfilMED", "Perfil")" class="btn-inicio">
                <i class="fas fa-home"></i> Inicio
            </a>
            <div class="page-title-container">
                <h1 class="page-title">Historial de Citas</h1>
            </div>
        </div>
    </div>

    <br /><br />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="search-panel">
        <h2 class="search-title"><i class="fas fa-filter"></i> Filtros de búsqueda</h2>
        <form id="formFiltroCitas" class="mb-4">
            <div class="row align-items-end g-3">
                <div class="col-md-4">
                    <label>Tipo de Consulta:</label>
                    <select class="form-control" id="tipoConsulta" name="tipoConsulta">
                        <option value="">Seleccione</option>
                        <option value="virtual">Virtual</option>
                        <option value="presencial">Presencial</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn-search w-100">
                        <i class="fas fa-search me-2"></i> Filtrar
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="results-panel">
        <h2 class="results-title"><i class="fas fa-calendar-check"></i> Resultados</h2>

        <div class="table-responsive">
            <table id="comentariosTable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Médico</th>
                        <th>Paciente</th>
                        <th>Estado</th>
                        <th>Hora</th>
                        <th>Complicaciones</th>
                        <th>Síntomas</th>
                        <th>Fecha de Cita</th>
                        <th>Modalidad</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody id="comentariosBody">
                    @foreach (var cita in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => cita.Medico.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => cita.Nombre_Paciente)</td>
                            <td>@Html.DisplayFor(modelItem => cita.Estado_Asistencia)</td>
                            <td>@Html.DisplayFor(modelItem => cita.Hora_cita)</td>
                            <td>@Html.DisplayFor(modelItem => cita.Descripcion_Complicaciones)</td>
                            <td>@Html.DisplayFor(modelItem => cita.Sintomas)</td>
                            <td>@Html.DisplayFor(modelItem => cita.Fecha_Cita)</td>
                            <td>@Html.DisplayFor(modelItem => cita.Modalidad)</td>
                            <td>
                                <a href="@Url.Action("Nota_Medico", "Perfil")" class="btn" style="background-color: #d7b29e; color: white;">Nota</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="paginationContainer" class="d-flex justify-content-center mt-3"></div>
        </div>
    </div>
    <div class="text-center my-4">
        <a href="@Url.Action("NotasAdicionales", "Perfil")" class="btn" style="background-color: #7A9CC6; color: white; ">Notas Adicionales</a>
        <a href="@Url.Action("NotasMedicas", "Perfil")" class="btn" style="background-color: #7A9CC6; color: white;">Notas Médicas</a>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('#formFiltroCitas').submit(function (e) {
            e.preventDefault();
            var tipoConsulta = $('#tipoConsulta').val();
            $('#comentariosTable tbody').html('<tr><td colspan="9" class="text-center">Cargando...</td></tr>');

            $.ajax({
                url: '@Url.Action("FiltrarCitas", "Perfil")',
                type: 'GET',
                data: { tipoConsulta: tipoConsulta },
                success: function (data) {
                    $('#comentariosTable tbody').empty();

                    if (data && data.length > 0) {
                        data.forEach(function (cita) {
                            var row = '<tr>' +
                                '<td>' + (cita.NombreMedico || '') + '</td>' +
                                '<td>' + (cita.Nombre_Paciente || '') + '</td>' +
                                '<td>' + (cita.Estado_Asistencia || '') + '</td>' +
                                '<td>' + (cita.Hora_cita || '') + '</td>' +
                                '<td>' + (cita.Descripcion_Complicaciones || '') + '</td>' +
                                '<td>' + (cita.Sintomas || '') + '</td>' +
                                '<td>' + (cita.Fecha_Cita || '') + '</td>' +
                                '<td>' + (cita.Modalidad || '') + '</td>' +
                                '<td><a href="@Url.Action("Nota_Medico", "Perfil")" class="btn" style="background-color: #d7b29e; color: white;">Nota</a></td>' +
                                '</tr>';
                            $('#comentariosTable tbody').append(row);
                        });
                    } else {
                        $('#comentariosTable tbody').html('<tr><td colspan="9" class="text-center">No se encontraron citas.</td></tr>');
                    }
                },
                error: function (xhr, status, error) {
                    $('#comentariosTable tbody').html('<tr><td colspan="9" class="text-center text-danger">Error al cargar las citas: ' + error + '</td></tr>');
                    console.log(xhr.responseText);
                }
            });
        });

        // Paginación
        var rowsPerPage = 5;
        var $rows = $("#comentariosBody tr");
        var totalPages = Math.ceil($rows.length / rowsPerPage);
        var currentPage = 1;

        function showPage(page) {
            var start = (page - 1) * rowsPerPage;
            var end = start + rowsPerPage;
            $rows.hide().slice(start, end).show();
            $("#paginationContainer").html(createPagination(page, totalPages));
        }

        function createPagination(page, total) {
            var pagination = `<nav><ul class="pagination">`;
            if (page > 1) {
                pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page - 1}">«</a></li>`;
            }
            for (var i = 1; i <= total; i++) {
                pagination += `<li class="page-item ${i === page ? 'active' : ''}">
                                <a href="#" class="page-link" data-page="${i}">${i}</a>
                               </li>`;
            }
            if (page < total) {
                pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page + 1}">»</a></li>`;
            }
            pagination += `</ul></nav>`;
            return pagination;
        }

        $(document).on("click", ".page-link", function (e) {
            e.preventDefault();
            var page = $(this).data("page");
            showPage(page);
        });

        showPage(currentPage);
    });
</script>
