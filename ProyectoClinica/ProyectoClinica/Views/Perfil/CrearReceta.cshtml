@model ProyectoClinica.Models.Receta

@{
    ViewBag.Title = "Solicitar Receta";
}

<link rel="stylesheet" href="~/CSS/Crear.css" />

<div class="container-form">
    <h2 class="page-title text-center">Nueva Solicitud de Receta</h2>
    @using (Html.BeginForm("CrearReceta", "Perfil", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
    @Html.AntiForgeryToken()

    <div class="form-section">
        <legend>Información de la Receta</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre_Receta, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Nombre_Receta, new { @class = "form-control", placeholder = "Nombre del Medicamento" })
            @Html.ValidationMessageFor(model => model.Nombre_Receta, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Observaciones_Pacientes, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Observaciones_Pacientes, new { @class = "form-control", placeholder = "Observaciones" })
            @Html.ValidationMessageFor(model => model.Observaciones_Pacientes, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Duracion_Tratamiento, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Duracion_Tratamiento, new { @class = "form-control", placeholder = "Duración del Tratamiento" })
            @Html.ValidationMessageFor(model => model.Duracion_Tratamiento, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cantidad_Requerida, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Cantidad_Requerida, new { @class = "form-control", placeholder = "Cantidad Requerida" })
            @Html.ValidationMessageFor(model => model.Cantidad_Requerida, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-section">
        <legend>Detalles Adicionales</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.Motivo_Solicitud, new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Motivo_Solicitud, new { @class = "form-control", placeholder = "Motivo de la Solicitud" })
            @Html.ValidationMessageFor(model => model.Motivo_Solicitud, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label">Adjuntar Documentos</label>
            <div class="border p-3 rounded bg-light">
                <input type="file" name="Imagen" class="form-control" />
                <small class="text-muted">Adjuntar receta anterior o documentos adicionales</small>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
        <a href="@Url.Action("Index", "Perfil")" class="btn btn-secondary">Cancelar</a>
    </div>
    }
</div>
