@model IEnumerable<ProyectoClinica.Models.Nota_Medico>

@{
    ViewBag.Title = "NotasMedicas";
}

<h2>Notas Medicas</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Observacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recomendacion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recomendacion)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarNotaMedico", new { id = item.Id_Nota_Medico }) |
                @Html.ActionLink("Eliminar", "EliminarNotaMedico", new { id = item.Id_Nota_Medico })
            </td>
        </tr>
    }

</table>
