@model IEnumerable<ProyectoClinica.Models.Nota_Medico>

@{
    ViewBag.Title = "Notas Médicas";
}

<style>
    /* Estilos del card */
    .card-container {
        max-width: 800px;
        margin: 30px auto;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .card-header {
        background-color: #0b7b82;
        color: white;
        padding: 15px;
        text-align: center;
        font-size: 20px;
        font-weight: bold;
    }

    .card-body {
        padding: 20px;
        background: white;
    }

    /* Tabla estilizada */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .custom-table th, .custom-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .custom-table th {
            background-color: #0b7b82;
            color: white;
        }

        .custom-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    /* Botones de acción */
    .action-btn {
        border: none;
        background: none;
        font-size: 18px;
        cursor: pointer;
        margin: 0 5px;
        transition: transform 0.2s;
    }

    .edit-btn {
        color: #28a745;
    }

        .edit-btn:hover {
            transform: scale(1.2);
        }

    .delete-btn {
        color: #dc3545;
    }

        .delete-btn:hover {
            transform: scale(1.2);
        }
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>
<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("DOCHCita", "Perfil")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>
<div class="card-container">
    <div class="card-header">Notas Médicas</div>
    <div class="card-body">

        <!-- Mensaje de éxito -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Tabla de notas médicas -->
        <table class="custom-table">
            <thead>
                <tr>
                    <th>Observación</th>
                    <th>Recomendación</th>
                    <th style="width: 100px; text-align: center;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Observacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Recomendacion)</td>
                        <td style="text-align: center;">
                            <a href="@Url.Action("EditarNotaMedico", new { id = item.Id_Nota_Medico })" class="action-btn edit-btn">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("EliminarNotaMedico", new { id = item.Id_Nota_Medico })" class="action-btn delete-btn">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
