@model ProyectoClinica.Models.Nota_Medico

@{
    ViewBag.Title = "Médico";
}

<style>
    .card-container {
        max-width: 600px;
        margin: 40px auto;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .card-header {
        background-color: #3bb4bc;
        color: white;
        text-align: center;
        padding: 15px;
        font-size: 20px;
        font-weight: bold;
    }

    .card-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-submit {
        background-color: #3bb4bc;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

        .btn-submit:hover {
            background-color: #2a9298;
        }

    .btn-back {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #3bb4bc;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-back:hover {
            color: #2a9298;
        }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
        width: 100%;
    }
</style>

<div class="card-container">
    <div class="card-header">
        Nota del Médico
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(model => model.Observacion, new { @class = "form-label" })
                @Html.TextAreaFor(model => model.Observacion, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Recomendacion, new { @class = "form-label" })
                @Html.TextAreaFor(model => model.Recomendacion, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.Recomendacion, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn-submit">
                Guardar
            </button>
        }

        <a href="@Url.Action("DOCHCita")" class="btn-back">Regresar</a>
    </div>
</div>
