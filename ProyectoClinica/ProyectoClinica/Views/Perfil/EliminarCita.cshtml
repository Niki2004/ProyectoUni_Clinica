@model IEnumerable<ProyectoClinica.Models.Cita>

@{
    ViewBag.Title = "Cancelación de Cita";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .profile-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 20px;
    }

    .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #007bff;
    }

    .profile-details {
        flex: 1;
    }

    .profile-name {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0;
    }

    .profile-email {
        color: #777;
        font-size: 0.9rem;
    }

    .profile-sections {
        margin-top: 20px;
    }

    .section {
        margin-bottom: 20px;
    }

        .section h3 {
            margin-bottom: 10px;
            color: #000000;
            font-size: 1.2rem;
            border-left: 4px solid #0b7b82;
            padding-left: 8px;
        }

        .section ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .section ul li {
                display: flex;
                align-items: center;
                background: #f9f9f9;
                padding: 10px 15px;
                border-radius: 5px;
                margin-bottom: 10px;
                transition: background 0.3s ease;
            }

                .section ul li:hover {
                    background: #3bb4bc80;
                }

                .section ul li i {
                    /*Color de los iconos*/
                    margin-right: 10px;
                    color: #0b7b82;
                }

    /* Estilos para la tabla */
    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    thead {
        background: linear-gradient(135deg, #0b7b82, #3bb4bc);
        color: #fff;
    }

    th {
        padding: 12px;
        text-align: left;
        font-weight: bold;
    }

    td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
        background: #f9f9f9;
        transition: background 0.3s ease;
    }

    tbody tr:last-child td {
        border-bottom: none;
    }

    tbody tr:hover {
        background: #e0f7fa;
        transform: scale(1.02);
        transition: all 0.3s ease;
    }

    .nav-link {
        display: inline-flex;
        align-items: center;
        background-color: #0b7b82;
        color: white !important;
        padding: 8px 12px;
        border-radius: 5px;
        transition: background 0.3s ease;
    }


    a.nav-link {
        display: flex;
        align-items: center;
        color: #0b7b82; /* Color del ícono */
        text-decoration: none;
    }

    .nav-link i {
        margin-right: 5px;
    }

    .nav-link:hover {
        background-color: #09686e;
        text-decoration: none;
    }

    a.nav-link:hover {
        text-decoration: underline;
    }

    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-size: 16px;
        text-decoration: none;
    }

        .custom-btn:hover {
            background-color: #09686e !important;
            text-decoration: none;
        }

    media (max-width: 992px) {
        .sidebar

    {
        width: 180px;
    }

    media (max-width: 768px) {
        .sidebar

    {
        width: 160px;
    }

    media (max-width: 576px) {
        .sidebar

    {
        width: 100%;
        height: auto;
        position: relative;
        padding-top: 20px;
        padding-bottom: 20px;
    }
</style>


<div style="display: flex; align-items: center; justify-content: space-between; width: 100%; padding: 10px 0;">
    <h2 style="flex: 1; text-align: center; margin: 0;">Historias de Citas</h2>
    <a href="@Url.Action("Index", "Perfil")" class="btn custom-btn" style="white-space: nowrap;">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>


<br />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Médico</th>
            <th>Paciente</th>
            <th>Estado</th>
            <th>Hora</th>
            <th>Complicaciones</th>
            <th>Síntomas</th>
            <th>Fecha</th>
            <th>Modalidad</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Medico.Nombre</td>
                <td>@item.Nombre_Paciente</td>
                <td>@item.Estado_Asistencia</td>
                <td>@item.Hora_cita</td>
                <td>@item.Descripcion_Complicaciones</td>
                <td>@item.Sintomas</td>
                <td>@item.Fecha_Cita.ToString("dd/MM/yyyy")</td>
                <td>@item.Modalidad</td>
                <td>
                    <a class="action-btn" href="@Url.Action("Eliminar", "Perfil", new { id = item.Id_Cita })"    
                       style="display: inline-flex; align-items: center; background-color: #EE7674; color: white; padding: 8px 12px; border-radius: 5px; transition: background 0.3s ease, transform 0.2s ease; font-weight: bold; text-decoration: none;">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
