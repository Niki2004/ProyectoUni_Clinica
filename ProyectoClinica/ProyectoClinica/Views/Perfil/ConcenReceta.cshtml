@model IEnumerable<ProyectoClinica.Models.Receta>

@{
    ViewBag.Title = "Recetas";
}


<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .profile-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 20px;
    }

    .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #3bb4bc;
    }

    .profile-details {
        flex: 1;
    }

    .profile-name {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0;
    }

    .profile-email {
        color: #777;
        font-size: 0.9rem;
    }

    .profile-sections {
        margin-top: 20px;
    }

    .section {
        margin-bottom: 20px;
    }

        .section h3 {
            margin-bottom: 10px;
            color: #000000;
            font-size: 1.2rem;
            border-left: 4px solid #0b7b82;
            padding-left: 8px;
        }

        .section ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .section ul li {
                display: flex;
                align-items: center;
                justify-content: space-between;
                background: #f9f9f9;
                padding: 10px 15px;
                border-radius: 5px;
                margin-bottom: 10px;
                transition: background 0.3s ease;
            }

                .section ul li:hover {
                    background: #3bb4bc80;
                }

                .section ul li i {
                    margin-right: 10px;
                    color: #0b7b82;
                }

    .badge {
        background-color: #0b7b82;
        color: white;
        font-size: 0.8rem;
        font-weight: bold;
        padding: 4px 8px;
        border-radius: 50%;
        margin-left: auto;
    }

    .text-success {
        color: #28a745;
        font-size: 0.9rem;
        /* Botón personalizado */
    }

    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("PerfilMED", "Perfil")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>
<br />


<!-- Título principal -->
<h2 class="text-center" style="color: #0b7b82;">Recetas del Paciente</h2>
<br />
<!-- Tabla con estilo mejorado -->
<table class="table table-striped table-bordered table-hover">
    <thead style="background-color: #3bb4bc; color: white;">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Fecha_Creacion)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre_Receta)</th>
            <th>@Html.DisplayNameFor(model => model.Observaciones_Pacientes)</th>
            <th>@Html.DisplayNameFor(model => model.Duracion_Tratamiento)</th>
            <th>@Html.DisplayNameFor(model => model.Cantidad_Requerida)</th>
            <th>@Html.DisplayNameFor(model => model.Motivo_Solicitud)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Fecha_Creacion)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre_Receta)</td>
                <td>@Html.DisplayFor(modelItem => item.Observaciones_Pacientes)</td>
                <td>@Html.DisplayFor(modelItem => item.Duracion_Tratamiento)</td>
                <td>@Html.DisplayFor(modelItem => item.Cantidad_Requerida)</td>
                <td>@Html.DisplayFor(modelItem => item.Motivo_Solicitud)</td>
                <td>
                    <a href="@Url.Action("RecetaDOC", "Perfil")" class="btn btn-sm" style="background-color: #0b7b82; color: white;">Confirmación Receta</a>
                </td>
            </tr>
        }
    </tbody>
</table>


