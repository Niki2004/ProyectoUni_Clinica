@model IEnumerable<ProyectoClinica.Models.Cita>

@{
    ViewBag.Title = "Historias de Citas";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="text-center flex-grow-1 mb-0 medical-title">Historial de Citas Médicas</h2>
            <a href="@Url.Action("Index", "Perfil")" class="btn custom-medical-btn">
                <i class="fas fa-home me-2"></i>Inicio
            </a>
        </div>
    </div>

    @* Mensajes de notificación *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-medical-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-medical-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card medical-appointment-card">
                    <div class="card-header medical-card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="appointment-header-title">
                                <i class="fas fa-calendar-alt me-2"></i>Cita Médica
                            </div>
                            <span class="badge medical-status-badge @(item.Estado_Asistencia == "Asistida" ? "badge-completed" : "badge-pending")">
                                @item.Estado_Asistencia
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="medical-info-row">
                                    <span class="medical-icon-badge medical-doctor-badge">
                                        <i class="fas fa-user-md"></i>
                                    </span>
                                    <div class="medical-info-content">
                                        <span class="medical-info-label">Médico:</span>
                                        @item.Medico.Nombre
                                    </div>
                                </div>
                                <div class="medical-info-row">
                                    <span class="medical-icon-badge medical-patient-badge">
                                        <i class="fas fa-user-injured"></i>
                                    </span>
                                    <div class="medical-info-content">
                                        <span class="medical-info-label">Paciente:</span>
                                        @item.Nombre_Paciente
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="medical-detail-label">
                                            <i class="fas fa-clock me-2 text-info"></i>Hora
                                        </div>
                                        <div class="medical-detail-value">@item.Hora_cita</div>
                                    </div>
                                    <div class="col-6">
                                        <div class="medical-detail-label">
                                            <i class="fas fa-calendar-day me-2 text-primary"></i>Fecha
                                        </div>
                                        <div class="medical-detail-value">@item.Fecha_Cita.ToString("dd/MM/yyyy")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="medical-detail-label">
                                    <i class="fas fa-file-medical me-2 text-warning"></i>Síntomas
                                </div>
                                <div class="medical-detail-content">@item.Sintomas</div>
                            </div>
                            <div class="col-12">
                                <div class="medical-detail-label">
                                    <i class="fas fa-notes-medical me-2 text-danger"></i>Complicaciones
                                </div>
                                <div class="medical-detail-content">
                                    @(string.IsNullOrEmpty(item.Descripcion_Complicaciones) ? "Sin complicaciones" : item.Descripcion_Complicaciones)
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="medical-detail-label">
                                    <i class="fas fa-laptop-medical me-2 text-info"></i>Modalidad
                                </div>
                                <span class="badge medical-modalidad-badge">
                                    @item.Modalidad
                                </span>
                            </div>
                        </div>
                    </div>
                 
                </div>
            </div>
        }
    </div>

    @* No appointments message *@
    @if (!Model.Any())
    {
        <div class="text-center mt-5 medical-empty-state">
            <i class="fas fa-inbox fa-4x mb-3"></i>
            <h4>No hay citas médicas registradas</h4>
        </div>
    }
</div>

<style>
    :root {
        --medical-primary: #0b7b82;
        --medical-secondary: #3bb4bc;
        --medical-accent-light: #75d3d9;
        --medical-accent-dark: #087078;
        --medical-background: #f4f7f8;
    }

    body {
        background-color: var(--medical-background);
        font-family: 'Arial', sans-serif;
    }

    .medical-title {
        color: var(--medical-primary);
        font-weight: 600;
    }

    .custom-medical-btn {
        background-color: var(--medical-primary);
        color: white !important;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .custom-medical-btn:hover {
            background-color: var(--medical-accent-dark);
            transform: translateY(-2px);
        }

    .medical-appointment-card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 6px 15px rgba(11, 123, 130, 0.1);
    }

        .medical-appointment-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 20px rgba(11, 123, 130, 0.2);
        }

    .medical-card-header {
        background: linear-gradient(135deg, var(--medical-primary), var(--medical-secondary));
        color: white;
        padding: 15px;
    }

    .appointment-header-title {
        font-weight: 600;
        display: flex;
        align-items: center;
    }

    .medical-status-badge {
        font-size: 0.8rem;
        padding: 4px 8px;
        border-radius: 4px;
    }

    .badge-completed {
        background-color: #28a745;
        color: white;
    }

    .badge-pending {
        background-color: #ffc107;
        color: #212529;
    }

    .medical-info-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        background-color: #f9f9f9;
        padding: 8px;
        border-radius: 6px;
    }

    .medical-icon-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        margin-right: 10px;
        color: white;
    }

    .medical-doctor-badge {
        background-color: var(--medical-primary);
    }

    .medical-patient-badge {
        background-color: var(--medical-secondary);
    }

    .medical-info-label {
        font-weight: 600;
        margin-right: 5px;
        color: var(--medical-accent-dark);
    }

    .medical-detail-label {
        color: var(--medical-accent-dark);
        font-size: 0.9rem;
        margin-bottom: 4px;
    }

    .medical-detail-value {
        font-weight: 500;
    }

    .medical-modalidad-badge {
        background-color: var(--medical-accent-light);
        color: var(--medical-primary);
    }

    .medical-card-footer {
        background-color: #f4f7f8;
        display: flex;
        justify-content: flex-end;
    }

    .btn-medical-edit {
        background-color: var(--medical-primary);
        color: white !important;
        border: none;
        padding: 6px 12px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .btn-medical-edit:hover {
            background-color: var(--medical-accent-dark);
            transform: translateY(-2px);
        }

    .medical-empty-state {
        color: var(--medical-primary);
    }

        .medical-empty-state i {
            color: var(--medical-secondary);
        }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    });
</script>
