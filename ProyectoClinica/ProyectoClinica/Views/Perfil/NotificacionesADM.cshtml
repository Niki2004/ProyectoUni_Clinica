@model List<string>

@{
    ViewBag.Title = "Notificaciones";
}

<style>
    /* Botón personalizado */
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

        .custom-btn:hover {
            background-color: #09686e !important;
            transform: translateY(-2px);
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.15);
        }

    /* Contenedor principal */
    .notifications-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        /* Título */
        .notifications-container h2 {
            font-size: 24px;
            font-weight: bold;
            color: #0b7b82;
            margin-bottom: 20px;
        }

    /* Lista de notificaciones */
    .list-group {
        padding: 0;
        margin: 0;
        list-style: none;
    }

    .list-group-item {
        display: flex;
        align-items: center;
        gap: 10px;
        background: #f9f9f9;
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 10px;
        transition: background 0.3s ease, transform 0.2s ease;
        font-size: 16px;
        font-weight: 500;
        border: none;
    }

        .list-group-item:hover {
            background: #e3f6f7;
            transform: translateX(5px);
        }

        .list-group-item i {
            color: #0b7b82;
            font-size: 18px;
        }

    /* Mensaje cuando no hay notificaciones */
    .no-notifications {
        color: #777;
        font-size: 16px;
        font-style: italic;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 6px;
    }
</style>

<!-- Botón de Inicio -->
<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("PerfilADM", "Perfil")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>

<!-- Contenedor de Notificaciones -->
<div class="notifications-container">
    <h2>Notificaciones</h2>

    @if (Model.Any())
    {
        <ul class="list-group">
            @foreach (var notificacion in Model)
            {
                <li class="list-group-item">
                    <i class="fas fa-bell"></i> @notificacion
                </li>
            }
        </ul>
    }
    else
    {
        <p class="no-notifications">No hay notificaciones nuevas.</p>
    }
</div>
