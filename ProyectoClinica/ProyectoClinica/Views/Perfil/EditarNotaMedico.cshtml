@model ProyectoClinica.Models.Nota_Medico

@{
    ViewBag.Title = "Editar Nota Médica";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow border-0" style="width: 50%;">
        <div class="card-header text-white" style="background-color: #3bb4bc;">
            <h4 class="mb-0 text-center">Editar Nota Médica</h4>
        </div>
        <div class="card-body bg-white">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id_Nota_Medico)

                <div class="mb-3">
                    @Html.LabelFor(model => model.Observacion, new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(model => model.Observacion, new { @class = "form-control", rows = "4", style = "resize: vertical;" })
                    @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Recomendacion, new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(model => model.Recomendacion, new { @class = "form-control", rows = "4", style = "resize: vertical;" })
                    @Html.ValidationMessageFor(model => model.Recomendacion, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn text-white px-4" style="background-color: #3bb4bc;">Guardar</button>
                    <a href="@Url.Action("NotasMedicas")" class="btn btn-secondary px-4">Regresar</a>
                </div>
            }
        </div>
    </div>
</div>
