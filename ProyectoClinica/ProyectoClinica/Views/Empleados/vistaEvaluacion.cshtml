@model IEnumerable<ProyectoClinica.Models.Evaluacion>

@{
    ViewBag.Title = "Evaluaciones Anteriores";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Evaluaciones Anteriores</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="@Url.Action("Empleados", "Empleados")" class="btn custom-btn">
            <i class="fas fa-home"></i> Inicio
        </a>
        <a href="@Url.Action("Evaluacion", "Empleados")" class="btn custom-btn">
            <i class="fas fa-plus"></i> Crear Evaluación
        </a>
    </div>

    <table class="table table-hover table-bordered text-center">
        <thead class="custom-header">
            <tr>
                <th>Fecha</th>
                <th>Calificación</th>
                <th>Comentarios</th>
                <th>Empleado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eval in Model)
            {
                <tr>
                    <td>@eval.Fecha_Evaluacion.ToString("dd/MM/yyyy")</td>
                    <td>@eval.Calificacion</td>
                    <td>@eval.Comentarios</td>
                    <td>
                        @if (eval.Empleado != null)
                        {
                            @eval.Empleado.Nombre @eval.Empleado.Apellido
                        }
                        else
                        {
                            <em>Sin empleado asociado</em>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

        .custom-btn:hover {
            background-color: #096b6e !important;
            transform: translateY(-2px);
        }

    .table-hover tbody tr:hover {
        background-color: #e3f2fd;
    }

    .custom-header {
        background-color: #0b7b82 !important;
        color: white !important;
    }
</style>
