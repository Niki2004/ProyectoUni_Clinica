
@{
    ViewBag.Title = "DesactivarPerfil";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .container {
            max-width: 500px;
            margin: 15px auto;
            padding: 15px;
            font-family: Arial, sans-serif;
        }

        .form-title {
            text-align: center;
            margin-bottom: 20px;
            font-size: 22px;
        }

        .form-group {
            margin-bottom: 12px;
        }

        .form-label {
            display: block;
            margin-bottom: 4px;
            color: #666;
            font-size: 14px;
        }

        .form-control {
            width: 100%;
            padding: 8px 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-sizing: border-box;
            height: 38px;
        }

        .form-control-textarea {
            height: 100px;
            resize: vertical;
        }

        .save-button {
            width: 100%;
            padding: 10px;
            background-color: #0B877D;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 5px;
        }

            .save-button:hover {
                background-color: #096b63;
            }

        .form-section {
            background-color: #f8f8f8;
            padding: 15px;
            border-radius: 6px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="form-title">Desactivar Perfil</h1>

        <form>
            <div class="form-section">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nombre Completo*" required>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Rol*" required>
                </div>


                <div class="form-group">
                    <textarea class="form-control form-control-textarea" placeholder="Motivo*" required></textarea>
                </div>
            </div>
            <button type="submit" class="save-button">Deshabilitar</button>

            <button type="submit" class="save-button">Guardar</button>
        </form>
    </div>
</body>
</html>