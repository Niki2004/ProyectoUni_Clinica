
@{
    ViewBag.Title = "CrearEmpleado";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .container {
            max-width: 500px;
            margin: 15px auto;
            padding: 15px;
            font-family: Arial, sans-serif;
        }

        .form-title {
            text-align: center;
            margin-bottom: 20px;
            font-size: 22px;
        }

        .form-group {
            margin-bottom: 12px;
        }

        .form-label {
            display: block;
            margin-bottom: 4px;
            color: #666;
            font-size: 14px;
        }

        .form-control {
            width: 100%;
            padding: 8px 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-sizing: border-box;
            height: 38px;
        }

        .date-container {
            display: flex;
            gap: 12px;
            margin-bottom: 12px;
        }

        .date-group {
            flex: 1;
        }

        .save-button {
            width: 100%;
            padding: 10px;
            background-color: #0B877D;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 5px;
        }

            .save-button:hover {
                background-color: #096b63;
            }

        .form-section {
            background-color: #f8f8f8;
            padding: 15px;
            border-radius: 6px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="form-title">Registro de Empleados</h1>

        <form>
            <div class="form-section">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nombre*" required>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Apellidos*" required>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Cedula*" required>
                </div>

                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Correo*" required>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Departamento*" required>
                </div>

                <div class="date-container">
                    <div class="date-group">
                        <label class="form-label">Comienza</label>
                        <input type="text" class="form-control" placeholder="[MMM/DD]">
                    </div>

                    <div class="date-group">
                        <label class="form-label">Termina</label>
                        <input type="text" class="form-control" placeholder="[Term]">
                    </div>
                </div>
            </div>

            <button type="submit" class="save-button">Guardar</button>
        </form>
    </div>
</body>
</html>