@model IEnumerable<ProyectoClinica.Models.RolAsignacion>

@{
    ViewBag.Title = "Historial de Roles";
}

<style>
    .container-form {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .page-title {
        color: #0b7b82;
        text-align: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #0b7b82;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th,
        .table td {
            padding: 15px;
            border: 1px solid #dee2e6;
            text-align: center;
            font-size: 14px;
        }

        .table th {
            background-color: #0b7b82;
            color: #fff;
            font-weight: bold;
        }

        .table tr:nth-child(even) td {
            background-color: #f2f2f2;
        }

    .action-link {
        background-color: #0b7b82;
        color: #fff;
        padding: 8px 16px;
        border-radius: 5px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        font-size: 14px;
        display: inline-block;
    }

        .action-link:hover {
            background-color: #096c72;
            transform: translateY(-1px);
        }

        /* Evitar que el enlace cambie a azul en hover o focus */
        .action-link,
        .action-link:hover,
        .action-link:focus {
            color: #fff !important;
            text-decoration: none;
        }

    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

        .custom-btn:hover {
            background-color: #096c72 !important;
            transform: translateY(-1px);
        }

        /* Evitar que el custom-btn cambie a azul en hover o focus */
        .custom-btn,
        .custom-btn:hover,
        .custom-btn:focus {
            color: white !important;
            text-decoration: none;
        }
</style>

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("Empleados", "Empleados")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>
<div class="container-form">
    <h2 class="page-title">Historial</h2>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Empleado.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Empleado.Apellido)</th>
                <th>@Html.DisplayNameFor(model => model.First().Empleado.Cedula)</th>
                <th>@Html.DisplayNameFor(model => model.First().Empleado.Correo)</th>
                <th>@Html.DisplayNameFor(model => model.First().Empleado.Departamento)</th>
                <th>@Html.DisplayNameFor(model => model.First().Empleado.Comentarios)</th>
                <th>@Html.DisplayNameFor(model => model.First().Empleado.Jornada)</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.Cedula)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.Correo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.Departamento)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.Comentarios)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleado.Jornada)</td>
                    <td>
                        @Html.ActionLink("Detalles", "detallesHistorial", new { id = item.Id_Rol }, new { @class = "action-link" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
