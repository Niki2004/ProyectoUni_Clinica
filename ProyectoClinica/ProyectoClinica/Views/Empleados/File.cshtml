@{
    ViewBag.Title = "Subir PDF";
}


<style>
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("Empleados", "Empleados")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>

<div class="container mt-5">
    <h2> Subir PDF</h2>

    @using (Html.BeginForm("File", "Empleados", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-4">
            @Html.Label("Nombre", htmlAttributes: new { @class = "form-label" })
            @Html.TextBox("nombre", null, new { @class = "form-control shadow-sm border-0 rounded-lg", placeholder = "Nombre del PDF" })
            @Html.ValidationMessage("nombre", "", new { @class = "text-danger" })
        </div>

        <div class="mb-4">
            @Html.Label("Archivo PDF", htmlAttributes: new { @class = "form-label" })
            <input type="file" name="file" class="form-control shadow-sm border-0 rounded-lg" accept="application/pdf" />
            @Html.ValidationMessage("file", "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn" style="background-color: #48D1CC; color: white; border-radius: 50px; box-shadow: 0 4px 6px rgba(72, 209, 204, 0.4); transition: all 0.3s ease; padding: 6px 12px; font-size: 12px;">
            Subir PDF
        </button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}