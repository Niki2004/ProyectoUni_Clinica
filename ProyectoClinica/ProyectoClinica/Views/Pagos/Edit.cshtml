@model ProyectoClinica.Models.Pagos

@{
    ViewBag.Title = "Edit";
}

<link href="~/CSS/Editar.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Editar Pago</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Pago)

        <div class="form-section">
            <legend>Información Bancaria</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">Banco</div>
                    <div class="detail-value">
                        @Html.DropDownListFor(model => model.Id_Banco, ViewBag.Banco as SelectList, "Seleccione una opción", new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Numero_Referencia, "Número de Referencia")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Numero_Referencia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Numero_Referencia, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Detalles del Pago</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Pago, "Fecha de Pago")</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Pago, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_Pago, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Tipo_Pago, "Tipo de Pago")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Tipo_Pago, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tipo_Pago, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Monto, "Monto")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Estado_Pago, "Estado de Pago")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Estado_Pago, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Estado_Pago, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Información del Beneficiario</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Beneficiario, "Beneficiario")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Beneficiario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Beneficiario, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Cuenta_Beneficiario, "Cuenta del Beneficiario")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Cuenta_Beneficiario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cuenta_Beneficiario, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Detalles Adicionales</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Descripcion, "Descripción")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Observaciones, "Observaciones")</div>
                    <div class="detail-value">
                        @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control", rows = "3" })
                        @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Información de Registro</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Usuario_Registro, "Usuario Registro")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Usuario_Registro, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Usuario_Registro, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Registro, "Fecha de Registro")</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Registro, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_Registro, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Usuario_Modificacion, "Usuario Modificación")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Usuario_Modificacion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Usuario_Modificacion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Fecha_Modificacion, "Fecha de Modificación")</div>
                    <div class="detail-value">
                        @Html.TextBoxFor(model => model.Fecha_Modificacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_Modificacion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center" style="margin-top: 20px;">
            <input type="submit" value="Guardar" class="btn-primary" style="margin-right: 10px;" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
