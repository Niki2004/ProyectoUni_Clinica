@model ProyectoClinica.Models.Pagos

@{
    ViewBag.Title = "Details";
}

<link href="~/CSS/Detalles.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Detalles del Pago</h2>

    <div class="form-section">
        <legend>Información Bancaria</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Banco</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Bancos.Nombre_Banco)
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Número de Referencia</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Numero_Referencia)
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Detalles del Pago</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Fecha de Pago</div>
                <div class="detail-value">
                    @Html.Raw(Model.Fecha_Pago.ToString("dd-MM-yyyy"))
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Tipo de Pago</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Tipo_Pago)
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Monto</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Monto)
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Estado de Pago</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Estado_Pago)
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Información del Beneficiario</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Beneficiario</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Beneficiario)
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Cuenta del Beneficiario</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Cuenta_Beneficiario)
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Detalles Adicionales</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Descripción</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Descripcion)
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Observaciones</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Observaciones)
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Información de Registro</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Usuario Registro</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Usuario_Registro)
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Fecha de Registro</div>
                <div class="detail-value">
                    @Html.Raw(Model.Fecha_Registro.ToString("dd-MM-yyyy"))
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Usuario Modificación</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Usuario_Modificacion)
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Fecha de Modificación</div>
                <div class="detail-value">
                    @Html.Raw(Model.Fecha_Modificacion.ToString("dd-MM-yyyy"))
                </div>
            </div>
        </div>
    </div>

    <div class="text-center" style="margin-top: 20px;">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id_Pago }, new { @class = "btn-primary" })
        @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
    </div>
</div>
