@model ProyectoClinica.Models.Inventario
@{
    ViewBag.Title = "Detalles del Producto";
}

<div class="container">
    <div class="header">
        <h1>Detalles del Producto</h1>
    </div>

    <div class="card">
        <div class="product-info">
            <div class="info-group">
                <div class="label">NOMBRE</div>
                <div class="value">@Html.DisplayFor(model => model.NombreArticulo)</div>
            </div>

            <div class="info-group">
                <div class="label">ESTADO</div>
                <div class="value">
                    <span class="status">@Html.DisplayFor(model => model.Estado.Descripcion)</span>
                </div>
            </div>

            <div class="info-group">
                <div class="label">MARCA</div>
                <div class="value">@Html.DisplayFor(model => model.Marca)</div>
            </div>

            <div class="info-group">
                <div class="label">CANTIDAD</div>
                <div class="value">
                    <span class="quantity-badge">@Html.DisplayFor(model => model.Cantidad)</span>
                </div>
            </div>

            <div class="info-group">
                <div class="label">PRECIO UNITARIO</div>
                <div class="value price-value">@Html.DisplayFor(model => model.PrecioUnitario)</div>
            </div>

            <div class="info-group">
                <div class="label">TIPO DE ARTÍCULO</div>
                <div class="value">@Html.DisplayFor(model => model.TipoArticulo)</div>
            </div>

            <div class="info-group">
                <div class="label">FECHA DE INGRESO</div>
                <div class="value">@Html.DisplayFor(model => model.FechaIngreso)</div>
            </div>

            <div class="info-group">
                <div class="label">FECHA DE CADUCIDAD</div>
                <div class="value">@Html.DisplayFor(model => model.FechaCaducidad)</div>
            </div>
        </div>

        <div class="actions">
            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-back" })
            @Html.ActionLink("Editar", "Editar", new { id = Model.Id_Articulo }, new { @class = "btn btn-edit" })
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }

    .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #e3ebf6;
    }

    .header h1 {
        font-size: 28px;
        color: #12263f;
        margin: 0;
        font-weight: 600;
    }

    .card {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        padding: 25px;
        margin-bottom: 30px;
    }

    .product-info {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        gap: 20px;
    }

    .info-group {
        margin-bottom: 20px;
    }

    .label {
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 5px;
        letter-spacing: 0.5px;
        font-weight: 500;
    }

    .value {
        font-size: 18px;
        font-weight: 500;
        color: #12263f;
    }

    .status {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        background-color: #00d97e;
        color: white;
    }

    .actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        cursor: pointer;
        border: none;
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
    }

    .btn-edit {
        background-color: #2c7be5;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    .price-value {
        font-size: 20px;
        font-weight: 700;
        color: #2c7be5;
    }

    .quantity-badge {
        background-color: #e3ebf6;
        padding: 4px 10px;
        border-radius: 4px;
        font-weight: 600;
    }

    media (max-width: 768px) {
        .product-info {
            grid-template-columns: 1fr;
        }
    }
</style>