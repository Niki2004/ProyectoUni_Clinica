@model ProyectoClinica.Models.Inventario

@{
    ViewBag.Title = "Detalles del Producto";
}

<style>
    .details-container {
        max-width: 600px;
        margin: 40px auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .details-container h2 {
            text-align: center;
            color: #008B8B;
            margin-bottom: 20px;
        }

    .details-table {
        width: 100%;
        border-collapse: collapse;
    }

        .details-table th {
            text-align: center;
            padding: 12px;
            background-color: #008B8B;
            color: white;
            font-weight: bold;
            width: 40%;
            white-space: nowrap;
            border: 2px solid black; /* Bordes negros */
        }

        .details-table td {
            padding: 12px;
            background-color: #f9f9f9;
            text-align: center; /* Centra el texto dentro del cuadro */
            font-weight: bold;
            border: 2px solid black; /* Bordes negros */
        }

    .btn-container {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: 500;
        text-transform: uppercase;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
        display: inline-block;
        margin: 5px;
    }

    .btn-edit {
        background-color: #FFA500;
    }

        .btn-edit:hover {
            background-color: #FF8C00;
        }

    .btn-back {
        background-color: #008B8B;
    }

        .btn-back:hover {
            background-color: #006B6B;
        }
</style>

<div class="details-container">
    <h2>Detalles del Producto</h2>

    <table class="details-table">
        <tr>
            <th>Estado</th>
            <td>@Html.DisplayFor(model => model.Estado.Descripcion)</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>@Html.DisplayFor(model => model.NombreArticulo)</td>
        </tr>
        <tr>
            <th>Marca</th>
            <td>@Html.DisplayFor(model => model.Marca)</td>
        </tr>
        <tr>
            <th>Cantidad</th>
            <td>@Html.DisplayFor(model => model.Cantidad)</td>
        </tr>
        <tr>
            <th>Precio Unitario</th>
            <td>@Html.DisplayFor(model => model.PrecioUnitario)</td>
        </tr>
        <tr>
            <th>Fecha de Caducidad</th>
            <td>@Html.DisplayFor(model => model.FechaCaducidad)</td>
        </tr>
        <tr>
            <th>Tipo de Artículo</th>
            <td>@Html.DisplayFor(model => model.TipoArticulo)</td>
        </tr>
        <tr>
            <th>Fecha de Ingreso</th>
            <td>@Html.DisplayFor(model => model.FechaIngreso)</td>
        </tr>
    </table>

    <div class="btn-container">
        @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-back" })
    </div>
</div>
