@model ProyectoClinica.Models.PagosXNomina

@{
    ViewBag.Title = "Detalles de Pago de Nómina";
}


<link href="~/CSS/Detalles.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Detalles de Pago de Nómina</h2>

    <div class="form-section">
        <legend>Información de Identificación</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Identificación de Contabilidad</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Contabilidad.ClienteProveedor)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Identificación del Pago</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Pagos.Numero_Referencia)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Identificación del Empleado</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Empleado.Nombre)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Detalles del Pago</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Fecha de Pago</div>
                <div class="detail-value"> @Html.Raw(Model.Fecha_Pago.ToString("dd-MM-yyyy"))</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Monto de Pago</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Monto_Pago)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Método de Pago</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Metodo_Pago)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Estado del Pago</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Estado_Pago)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Información Adicional</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Observaciones</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Observaciones)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Fecha de Registro</div>
                <div class="detail-value">
                    @Html.Raw(Model.Fecha_Registro.ToString("dd-MM-yyyy"))
                </div>
            </div>
        </div>
    </div>

    <div class="text-center" style="margin-top: 20px;">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id_PagosXNomina }, new { @class = "btn-primary" })
        @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
    </div>
</div>


