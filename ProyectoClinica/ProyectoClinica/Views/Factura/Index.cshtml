@{
    ViewBag.Title = "Secretaria";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
<link href="~/CSS/VistaGeneral.css" rel="stylesheet" />

<body>
    <div class="container-fluid">

        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">
                <div class="sidebar">
                    <div class="p-3 d-flex justify-content-center">
                        <img src="~/Imagenes/Logo.png" alt="Centro Integral Santo Domingo Logo" class="img-fluid" style="max-width: 195px; height: auto;" />
                    </div>

                    <center><div class="nav-header">Plataforma</div></center>
                    <div class="nav-item">
                        <a class="nav-link">
                            <div>
                                Navegación
                            </div>

                        </a>
                        <ul class="submenu">
                            <a href="@Url.Action("Index", "Factura")" class="nav-link">
                                <i class="fas fa-cash-register"></i> Punto de venta
                            </a>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="button-container">
                <div style="display: flex; align-items: center; margin-bottom: 10px;">
                    <a href="@Url.Action("VistaSEC", "Factura")" style="text-decoration: none; color: #000000; font-size: 18px; display: flex; align-items: center;">
                        <i class="fas fa-home" style="margin-right: 5px;"></i>
                        <h4 style="margin: 0; font-weight: bold; color: #333;">Módulo de Punto de Venta</h4>
                    </a>
                </div>

                <div style="text-align: left; margin-bottom: 5px;">
                    <span style="font-size: 14px; color: #555;">
                        Obtén una visión completa de la información clínica, administrativa y financiera de tu clínica de salud
                    </span>
                </div>
                <br />


                <div class="dashboard-cards">
                    <!-- Tarjeta 1 - Pago de Servicio -->
                    <div class="simple-card">
                        <div class="card-number">1</div>
                        <div class="card-header">
                            <h3 class="card-title">Pago de Servicio</h3>
                        </div>
                        <div class="card-body">
                            <p>Realiza pagos de servicio de manera rápida y segura.</p>
                        </div>
                        <a href="/Factura/RealizarPago" class="detail-btn">
                            <i class="fas fa-arrow-right"></i> Ingresar
                        </a>
                    </div>

                    <!-- Tarjeta 2 - Descuentos/Afiliaciones -->
                    <div class="simple-card">
                        <div class="card-number">2</div>
                        <div class="card-header">
                            <h3 class="card-title">Descuentos/Afiliaciones</h3>
                        </div>
                        <div class="card-body">
                            <p>Accede a descuentos y afíliate a programas especiales.</p>
                        </div>
                        <a href="/Descuento/Index" class="detail-btn">
                            <i class="fas fa-arrow-right"></i> Ingresar
                        </a>
                    </div>

                    <!-- Tarjeta 3 - Ver Pagos Realizados -->
                    <div class="simple-card">
                        <div class="card-number">3</div>
                        <div class="card-header">
                            <h3 class="card-title">Ver Pagos Realizados</h3>
                        </div>
                        <div class="card-body">
                            <p>Consulta los pagos que has realizado anteriormente.</p>
                        </div>
                        <a href="/Factura/VerPagos" class="detail-btn">
                            <i class="fas fa-arrow-right"></i> Ingresar
                        </a>
                    </div>
                </div>
            </div>

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
            <script>
                // Toggle submenu functionality
                document.querySelectorAll('.nav-link').forEach(link => {
                    link.addEventListener('click', function () {
                        // Close all other open submenus
                        document.querySelectorAll('.submenu').forEach(submenu => {
                            if (submenu !== this.nextElementSibling) {
                                submenu.classList.remove('active');
                                this.classList.remove('active');
                            }
                        });

                        // Toggle the clicked submenu
                        const submenu = this.nextElementSibling;
                        submenu.classList.toggle('active');
                        this.classList.toggle('active');
                    });
                });
            </script>
        </div>
    </div>

</body>








