@model ProyectoClinica.Models.AsignacionRolesTemporales

@{
    ViewBag.Title = "Details";
}

<link href="~/CSS/Detalles.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Detalles de los Roles Temporales</h2>

    <div class="form-section">
        <legend>Detalles Generales</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Nombre</div>
                <div class="detail-value">@Html.DisplayFor(model => model.ApplicationUser.Nombre)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Nombre del Departamento</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Departamentos.Nombre_Departamento)</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Fechas</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Fecha de Inicio</div>
                <div class="detail-value">@Html.Raw(Model.Fecha_Inicio.ToString("dd-MM-yyyy"))</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Fecha Final</div>
                <div class="detail-value">@Html.Raw(Model.Fecha_Fin.ToString("dd-MM-yyyy"))</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Detalles Adicionales</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Estado</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Estado)</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Motivo</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Motivo)</div>
            </div>
        </div>
    </div>

    <div class="text-center" style="margin-top: 20px;">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id_AsignacionRoles }, new { @class = "btn-primary" })
        @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
    </div>
</div>
