@model ProyectoClinica.Models.AsignacionRolesTemporales

@{
    ViewBag.Title = "Eliminar Asignación de Roles";
}

<link rel="stylesheet" href="~/CSS/Crear.css" /> 
<link href="~/CSS/EliminarAdmin.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Eliminar Asignación de Roles</h2>

    <div class="warning-message">
        <i class="fas fa-exclamation-triangle"></i> ¿Está seguro de que desea eliminar esta asignación de roles? Esta acción no se puede deshacer.
    </div>

    <div class="form-horizontal">
        <div class="form-section">
            <legend>Información del Usuario</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.ApplicationUser.Nombre, "Usuario", htmlAttributes: new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.ApplicationUser.Nombre)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UsuarioAsignado.Nombre, "Usuario Asignado", htmlAttributes: new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.UsuarioAsignado.Nombre)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Departamentos.Nombre_Departamento, "Departamento", htmlAttributes: new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Departamentos.Nombre_Departamento)</div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Fechas de Asignación</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Inicio, "Fecha de Inicio", htmlAttributes: new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Fecha_Inicio)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Fin, "Fecha Final", htmlAttributes: new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Fecha_Fin)</div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Detalles Adicionales</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Estado, "Estado", htmlAttributes: new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Estado)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Motivo, "Motivo", htmlAttributes: new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Motivo)</div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group text-center">
                <input type="submit" value="Eliminar" class="btn-primary" />
                @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}