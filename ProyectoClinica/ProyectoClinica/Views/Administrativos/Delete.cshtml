@model ProyectoClinica.Models.Empleado

@{
    ViewBag.Title = "Eliminar Usuario";
}

<style>
    .container-form {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .page-title {
        color: #0b7b82;
        text-align: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #0b7b82;
    }

    .dl-horizontal dt {
        float: left;
        width: 40%;
        font-weight: 600;
        color: #2c3e50;
        clear: both;
        margin-bottom: 8px;
    }

    .dl-horizontal dd {
        margin-left: 42%;
        margin-bottom: 8px;
        color: #555;
    }

    .btn-container {
        text-align: center;
        margin-top: 20px;
    }

    /* Botón de eliminar (rojo) */
    .btn-eliminar {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.2s ease;
        text-decoration: none;
        margin-right: 10px;
    }

        .btn-eliminar:hover {
            background-color: #c82333;
            transform: translateY(-1px);
        }

    /* Botón de regresar (azul) */
    .btn-regresar {
        background-color: #0b7b82;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-regresar:hover {
            background-color: #096c72;
            transform: translateY(-1px);
        }
</style>

<div class="container-form">
    <h2 class="page-title">¿Estás seguro que quieres eliminar al usuario?</h2>
    <hr />

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Estado.Descripcion)</dt>
        <dd>@Html.DisplayFor(model => model.Estado.Descripcion)</dd>

        <dt>@Html.DisplayNameFor(model => model.Comentarios)</dt>
        <dd>@Html.DisplayFor(model => model.Comentarios)</dd>

        <dt>@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd>@Html.DisplayFor(model => model.Nombre)</dd>

        <dt>@Html.DisplayNameFor(model => model.Apellido)</dt>
        <dd>@Html.DisplayFor(model => model.Apellido)</dd>

        <dt>@Html.DisplayNameFor(model => model.Cedula)</dt>
        <dd>@Html.DisplayFor(model => model.Cedula)</dd>

        <dt>@Html.DisplayNameFor(model => model.Correo)</dt>
        <dd>@Html.DisplayFor(model => model.Correo)</dd>

        <dt>@Html.DisplayNameFor(model => model.Jornada)</dt>
        <dd>@Html.DisplayFor(model => model.Jornada)</dd>

        <dt>@Html.DisplayNameFor(model => model.Fecha_registro)</dt>
        <dd>@Html.DisplayFor(model => model.Fecha_registro)</dd>

        <dt>@Html.DisplayNameFor(model => model.Departamento)</dt>
        <dd>@Html.DisplayFor(model => model.Departamento)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="btn-container">
            <input type="submit" value="Eliminar" class="btn-eliminar" />
            @Html.ActionLink("Regresar", "VistaEliminar", null, new { @class = "btn-regresar" })
        </div>
    }
</div>
