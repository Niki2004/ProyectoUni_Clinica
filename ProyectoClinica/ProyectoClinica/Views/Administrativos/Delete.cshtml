@model ProyectoClinica.Models.Empleado

@{
    ViewBag.Title = "Eliminar Usuario";
}

<link rel="stylesheet" href="~/CSS/Crear.css" /> @*Link de los estilos*@
<link href="~/CSS/EliminarAdmin.css" rel="stylesheet" />


<div class="container-form">
    <h2 class="page-title">Eliminar Usuario</h2>

    <div class="warning-message">
        <i class="fas fa-exclamation-triangle"></i> ¿Estás seguro que deseas eliminar este usuario? Esta acción no se puede deshacer.
    </div>
    <div class="form-horizontal">
        <div class="form-section">
            <legend>Información del Usuario</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Nombre)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Apellido, new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Apellido)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Cedula, new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Cedula)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Correo, new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Correo)</div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Detalles de Trabajo</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Estado.Descripcion, "Estado", new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Estado.Descripcion)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Jornada, new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Jornada)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Departamento, new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Departamento)</div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_registro, "Fecha de Registro", new { @class = "control-label" })
                    <div class="info-value">@Html.DisplayFor(model => model.Fecha_registro)</div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <legend>Comentarios</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.Comentarios, new { @class = "control-label" })
                <div class="info-value">@Html.DisplayFor(model => model.Comentarios)</div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group text-center">
                <input type="submit" value="Eliminar Usuario" class="btn-primary" />
                @Html.ActionLink("Regresar a la Lista", "VistaEliminar", null, new { @class = "btn-secondary" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}