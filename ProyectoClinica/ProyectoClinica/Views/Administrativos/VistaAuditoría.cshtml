@model IEnumerable<ProyectoClinica.Models.Cita>

@{
    ViewBag.Title = "Auditoría";
}


<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Auditoria</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/CSS/Administrativo.css" rel="stylesheet" />

</head>
<body>
    <div class="page-container">
        <div class="header-container">
            <div style="display: flex; align-items: center; justify-content: space-between; width: 100%;">
                <a href="@Url.Action("Administrativo", "Administrativos")" class="btn-inicio">
                    <i class="fas fa-home"></i> Inicio
                </a>
                <div class="page-title-container">
                    <h1 class="page-title">Lista de Auditoria</h1>
                </div>
            </div>
        </div>

        <br>
        <br>

        <div class="results-panel">
            <h2 class="results-title" style="color: #392F5A;"><i class="fas fa-clipboard-list"></i> Resultados</h2>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nombre del Médico</th>
                            <th>Nombre del Paciente</th>
                            <th>Fecha de la Cita</th>
                            <th>Hora de la cita</th>
                            <th>Tipo de Modalidad</th>
                            <th>Complicaciones del Paciente</th>
                            <th>Sintomas del Paciente</th>
                            <th>Estado de la Asistencia</th>
                        </tr>
                    </thead>
                    <tbody id="usuariosBody">
                        @foreach (var auditoria in Model)
                        {
                            <tr>
                                <td>@auditoria.Medico.Nombre</td>
                                <td>@auditoria.Nombre_Paciente</td>
                                <td>@auditoria.Fecha_Cita.ToShortDateString()</td>
                                <td>@auditoria.Hora_cita</td>
                                <td>@auditoria.Modalidad</td>
                                <td>@auditoria.Descripcion_Complicaciones</td>
                                <td>@auditoria.Sintomas</td>
                                <td>@auditoria.Estado_Asistencia</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div id="paginationContainer" class="d-flex justify-content-center mt-3"></div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            var rowsPerPage = 5;
            var $rows = $("#usuariosBody tr");
            var totalPages = Math.ceil($rows.length / rowsPerPage);
            var currentPage = 1;

            function showPage(page) {
                var start = (page - 1) * rowsPerPage;
                var end = start + rowsPerPage;

                $rows.hide().slice(start, end).show();
                $("#paginationContainer").html(createPagination(page, totalPages));
            }

            function createPagination(page, total) {
                var pagination = `<nav><ul class="pagination">`;

                if (page > 1) {
                    pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page - 1}">«</a></li>`;
                }

                for (var i = 1; i <= total; i++) {
                    pagination += `<li class="page-item ${i === page ? 'active' : ''}">
                                             <a href="#" class="page-link" data-page="${i}">${i}</a>
                                           </li>`;
                }

                if (page < total) {
                    pagination += `<li class="page-item"><a href="#" class="page-link" data-page="${page + 1}">»</a></li>`;
                }

                pagination += `</ul></nav>`;
                return pagination;
            }

            $(document).on("click", ".page-link", function (e) {
                e.preventDefault();
                var page = $(this).data("page");
                showPage(page);
            });

            showPage(currentPage);
        });
    </script>
}