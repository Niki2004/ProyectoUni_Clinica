@{
    ViewBag.Title = "Administrativo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Centro Integral Santo Domingo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/CSS/VistaGeneral.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">

        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar">
                <div class="sidebar">
                    <div class="p-3 d-flex justify-content-center">
                        <img src="~/Imagenes/Logo.png" alt="Centro Integral Santo Domingo Logo" class="img-fluid" style="max-width: 195px; height: auto;" />
                    </div>

                    <center><div class="nav-header">Plataforma</div></center>
                    <div class="nav-item">
                        <a class="nav-link">
                            <div>
                                Navegación
                            </div>

                        </a>
                        <ul class="submenu">
                            <a @*href="@Url.Action(" ", "Punto de Venta")"*@ class="nav-link">
                                <i class="fas fa-cash-register"></i> Punto de Venta
                            </a>
                            <br />
                            <a href="@Url.Action("Index", "Inventario")" class="nav-link">
                                <i class="fas fa-boxes"></i> Inventario
                            </a>
                            <br />
                            <a href="@Url.Action("VistaCON", "Contabilidad")" class="nav-link">
                                <i class="fas fa-calculator"></i> Contabilidad
                            </a>
                            <br />
                            <a href="@Url.Action("VistaAdmRep", "Reporte")" class="nav-link">
                                <i class="fas fa-chart-line"></i> Reportes
                            </a>
                        </ul>
                    </div>

                    <hr />

                    <div class="nav-item">
                        <a class="nav-link">
                            <div>
                                Administración
                            </div>

                        </a>
                        <ul class="submenu">
                            <a href="@Url.Action("Administrativo", "Administrativos")" class="nav-link">
                                <i class="fas fa-user-tie"></i> Administrativo
                            </a>
                            <br />
                            <a href="@Url.Action("Empleados", "Empleados")" class="nav-link">
                                <i class="fas fa-users"></i> Empleados
                            </a>
                            <br />
                            <a href="@Url.Action("Expedientes", "Expedientes")" class="nav-link">
                                <i class="fas fa-folder-open"></i> Expedientes
                            </a>
                            <br />
                            <a href="@Url.Action("VistaCAdmin", "Cita")" class="nav-link">
                                <i class="fas fa-calendar-check"></i> Citas
                            </a>
                        </ul>
                    </div>
                </div>
            </div>


            <!-- Main Content -->
            <div class="button-container">
                <div style="display: flex; align-items: center; margin-bottom: 10px;">
                    <a href="@Url.Action("VistaAdmin", "Empleados")" style="text-decoration: none; color: #000000; font-size: 18px; display: flex; align-items: center;">
                        <i class="fas fa-home" style="margin-right: 5px;"></i>
                        <h4 style="margin: 0; font-weight: bold; color: #333;">Módulo Administrativo</h4>
                    </a>
                </div>

                <div style="text-align: left; margin-bottom: 5px;">
                    <span style="font-size: 14px; color: #555;">
                        Obtén una visión completa de la información clínica, administrativa y financiera de tu clínica de salud
                    </span>
                </div>
                <br />

                <!-- Información de Permisos -->
                <div class="permission-info">
                    @if (ViewBag.EsAdministrador)
                    {
                        <div class="alert alert-success">
                            <p><strong>Rol:</strong> Administrador</p>
                            <p><strong>Estado:</strong> @ViewBag.Estado</p>
                            <p><strong>Departamento:</strong> @ViewBag.Departamento</p>
                            <p>Tiene acceso completo a todos los módulos administrativos.</p>
                        </div>
                    }
                    else if (ViewBag.TienePermisos)
                    {
                        <div class="alert alert-success">
                            <p><strong>Estado:</strong> @ViewBag.Estado</p>
                            <p><strong>Departamento Asignado:</strong> @ViewBag.Departamento</p>
                            <p>Tiene acceso a los módulos administrativos según su asignación temporal.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <p>No tiene permisos activos para acceder a los módulos administrativos.</p>
                            <p>Por favor, contacte al administrador para obtener los permisos necesarios.</p>
                        </div>
                    }
                </div>

                @if (ViewBag.TienePermisos || ViewBag.EsAdministrador)
                {
                    <div class="container">
                        <div class="row mb-4 text-center row-cols-4 g-3">
                            <div class="col">
                                @Html.ActionLink("Registro de Usuarios", "Create", "Administrativos", null, new { @class = "btn btn-info btn-sm w-100" })
                            </div>
                            <div class="col">
                                @Html.ActionLink("Asignación de Roles", "Index", "AsignacionRolesTemporales", null, new { @class = "btn btn-primary btn-sm w-100" })
                            </div>
                            <div class="col">
                                @Html.ActionLink("Editar Usuarios", "VistaADM", "Administrativos", null, new { @class = "btn btn-info btn-sm w-100" })
                            </div>
                        </div>

                        <div class="row mb-4 text-center row-cols-4 g-3">
                            <div class="col">
                                @Html.ActionLink("Deshabilitar Usuarios", "VistaEliminar", "Administrativos", null, new { @class = "btn btn-primary btn-sm w-100" })
                            </div>
                            <div class="col">
                                @Html.ActionLink("Buscar Usuarios", "Buscar", "Administrativos", null, new { @class = "btn btn-primary btn-sm w-100" })
                            </div>
                            <div class="col">
                                @Html.ActionLink("Auditoría Administrativa", "VistaAuditoría", "Administrativos", null, new { @class = "btn btn-info btn-sm w-100" })
                            </div>
                        </div>

                        <div class="row mb-4 text-center row-cols-4 g-3">
                            <div class="col">
                                @Html.ActionLink("Ver Pagos", "VerPagos", "Factura", null, new { @class = "btn btn-info btn-sm w-100" })
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <p>No tiene acceso a los módulos administrativos.</p>
                        <p>Para obtener acceso, necesita:</p>
                        <ul>
                            <li>Estar asignado a un departamento</li>
                            <li>Tener un rol temporal activo</li>
                            <li>Tener el estado "Activo" en su asignación</li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle submenu functionality
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function () {
                // Close all other open submenus
                document.querySelectorAll('.submenu').forEach(submenu => {
                    if (submenu !== this.nextElementSibling) {
                        submenu.classList.remove('active');
                        this.classList.remove('active');
                    }
                });

                // Toggle the clicked submenu
                const submenu = this.nextElementSibling;
                submenu.classList.toggle('active');
                this.classList.toggle('active');
            });
        });
    </script>

</body>
