@model ProyectoClinica.Models.Empleado

@{
    ViewBag.Title = "Crear Usuario";
}

<link rel="stylesheet" href="~/CSS/Crear.css" /> @*Link de los estilos*@

<div class="container-form">
    <h2 class="page-title">Crear Usuario</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-section">
                <legend>Información del Usuario</legend>
                <div class="form-grid">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Apellido, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Cedula, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Correo, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-section">
                <legend>Detalles de Trabajo</legend>
                <div class="form-grid">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Id_Estado, "Estado", new { @class = "control-label" })
                        @Html.DropDownList("Id_Estado", null, "Seleccione una opción", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Id_Estado, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Jornada, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Jornada, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Jornada, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Departamento, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Departamento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Departamento, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Fecha_registro, "Fecha de Registro", new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Fecha_registro, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Fecha_registro, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-section">
                <legend>Comentarios</legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.Comentarios, new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Comentarios, new { @class = "form-control", rows = "3" })
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Crear Usuario" class="btn-primary" />
                @Html.ActionLink("Regresar a la Lista", "Administrativo", "Administrativos", null, new { @class = "btn-secondary" })
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

