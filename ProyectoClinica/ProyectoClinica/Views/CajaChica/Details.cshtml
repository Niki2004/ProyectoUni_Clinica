@model ProyectoClinica.Models.Caja_Chica

@{
    ViewBag.Title = "Detalles Caja Chica";
}

<link href="~/CSS/Detalles.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Detalles de Caja Chica</h2>

    <div class="form-section">
        <legend>Información Básica</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Contabilidad</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Contabilidad.ClienteProveedor)
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Fechas</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Fecha Registro</div>
                <div class="detail-value">
                    @Html.Raw(Model.Fecha_Registro.ToString("dd-MM-yyyy"))
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Fecha Movimiento</div>
                <div class="detail-value">
                    @Html.Raw(Model.Fecha_Movimiento.ToString("dd-MM-yyyy"))
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Fecha Modificación</div>
                <div class="detail-value">
                    @Html.Raw(Model.Fecha_Modificacion.ToString("dd-MM-yyyy"))
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Información Financiera</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Monto</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Saldo Anterior</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Saldo_Anterior, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Saldo Actual</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Saldo_Actual, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Beneficiario</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Beneficiario, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Totales y Estado</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Número de Comprobante</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Numero_Comprobante, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Tipo de Movimiento</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Tipo_Movimiento, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Categoría Gasto</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Categoria_Gasto, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Número de Factura</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Numero_Factura, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Estado</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Comentarios y Observaciones</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Concepto</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Concepto, new { @class = "form-control", rows = "3" })
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Observaciones</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Observaciones, new { @class = "form-control", rows = "3" })
                </div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <legend>Usuarios Responsables</legend>
        <div class="detail-group">
            <div class="detail-item">
                <div class="detail-label">Registro de Usuario</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Usuario_Registro, new { @class = "form-control", rows = "3" })
                </div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Registro de Usuario Modificado</div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Usuario_Modificacion, new { @class = "form-control", rows = "3" })
                </div>
            </div>
        </div>
    </div>

    <div class="text-center" style="margin-top: 20px;">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id_Caja_Chica }, new { @class = "btn-primary" })
        @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
    </div>
</div>