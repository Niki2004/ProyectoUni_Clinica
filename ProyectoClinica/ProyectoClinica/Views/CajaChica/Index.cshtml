@model IEnumerable<ProyectoClinica.Models.Caja_Chica>

@{
    ViewBag.Title = "Index";
}

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("VistaCON", "Contabilidad")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>


</br>

<h2 class="text-center">Caja Chica</h2>

</br>


<p>
    @Html.ActionLink("Crear Caja Chica", "Create", null, new { @class = "btn-pago" })
</p>

</br>




<style>
    .btn-pago {
        /* Los estilos existentes se mantienen */
        background-color: #0b7b82;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin-top: 5px;
        text-align: center;
    }

        .btn-pago:hover {
            background-color: #0056b3;
        }

    .custom-btn {
        /* Los estilos existentes se mantienen */
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Nuevos estilos para la tabla */
    .table {
        width: 100%;
        font-size: 1rem;
        table-layout: fixed;
    }

        .table th,
        .table td {
            padding: 6px 8px;
            word-wrap: break-word;
            max-width: 150px;
        }

        .table th {
            font-size: 1.1rem;
            background-color: #0b7b82;
            color: white;
        }

        .table td {
            font-size: 1rem;
        }

            /* Ajustar el ancho de las columnas */
            .table th:nth-child(1),
            .table td:nth-child(1) {
                width: 11%;
            }
            /* Registro */

            .table th:nth-child(2),
            .table td:nth-child(2) {
                width: 10%;
            }
            /* Transacción */

            .table th:nth-child(3),
            .table td:nth-child(3) {
                width: 9%;
            }
            /* Cliente */

            .table th:nth-child(4),
            .table td:nth-child(4) {
                width: 8%;
            }
            /* Estatus */

            .table th:nth-child(5),
            .table td:nth-child(5) {
                width: 7%;
            }
            /* Nómina */

            .table th:nth-child(6),
            .table td:nth-child(6) {
                width: 7%;
            }
            /* Monto */

            .table th:nth-child(7),
            .table td:nth-child(7) {
                width: 10%;
            }
            /* Anticipo */

            .table th:nth-child(8),
            .table td:nth-child(8) {
                width: 8%;
            }
            /* Descuento */

            .table th:nth-child(9),
            .table td:nth-child(9) {
                width: 8%;
            }
            /* Ingresos */

            .table th:nth-child(10),
            .table td:nth-child(10) {
                width: 8%;
            }
            /* Pendientes */

            .table th:nth-child(11),
            .table td:nth-child(11) {
                width: 8%;
            }
            /* Sueldos */

            .table th:nth-child(12),
            .table td:nth-child(12) {
                    width:  9%;
            }
</style>
<table class="table">
    <tr>
        <th style="padding: 12px;">
            <label>Comprobante</label>
        </th>
        <th style="padding: 12px;">
            <label>Fecha de Movimiento</label>
        </th>
        <th style="padding: 12px;">
            <label>Tipo de Movimiento</label>
        </th>
        <th style="padding: 12px;">
            <label>Monto</label>
        </th>
        <th style="padding: 12px;">
            <label>Saldo Anterior</label>
        </th>
        <th style="padding: 12px;">
            <label>Saldo Actual</label>
        </th>
        <th style="padding: 12px;">
            <label>Beneficiario</label>
        </th>
        <th style="padding: 12px;">
            <label>Categoría del Gasto</label>
        </th>
        <th style="padding: 12px;">
            <label>Número de Factura</label>
        </th>
        <th style="padding: 12px;">
            <label>Estado</label>
        </th>
        <th style="padding: 12px;">
            <label>Fecha de Registro</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Numero_Comprobante)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Fecha_Movimiento)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Tipo_Movimiento)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Saldo_Anterior)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Saldo_Actual)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Beneficiario)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Categoria_Gasto)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Numero_Factura)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td style="padding: 12px;">
                @Html.DisplayFor(modelItem => item.Fecha_Registro)
            </td>
            <td style="padding: 12px;">
                @Html.ActionLink("Detalle", "Details", new { id = item.Id_Caja_Chica }, new { @class = "btn-pago" })
            </td>
        </tr>
    }

</table>
