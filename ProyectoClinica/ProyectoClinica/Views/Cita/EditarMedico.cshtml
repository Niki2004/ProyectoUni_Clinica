@model ProyectoClinica.Models.Medico

@{
    ViewBag.Title = "Editar Médico";
}

<h2>Editar Médico</h2>

@using (Html.BeginForm("EditarMedico", "cita", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Detalles del Médico</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id_Medico)

    <!-- Cita -->
    <div class="form-group">
        @Html.LabelFor(model => model.Id_Cita, "Cita", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Id_Cita, ViewBag.Id_Cita as SelectList, "Seleccione una cita", new { @class = "form-control", id = "Id_Cita" })
            @Html.ValidationMessageFor(model => model.Id_Cita, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Receta -->
    <div class="form-group">
        @Html.LabelFor(model => model.Id_receta, "Receta", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Id_receta, ViewBag.Id_receta as SelectList, "Seleccione una receta", new { @class = "form-control", id = "Id_receta" })
            @Html.ValidationMessageFor(model => model.Id_receta, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Usuario -->
    <div class="form-group">
        @Html.LabelFor(model => model.Id, "Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Id, ViewBag.Id as SelectList, "Seleccione un usuario", new { @class = "form-control", id = "Id_Usuario" })
            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Especialidad -->
    <div class="form-group">
        @Html.LabelFor(model => model.Especialidad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Especialidad, new { @class = "form-control", id = "Especialidad" })
            @Html.ValidationMessageFor(model => model.Especialidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Horario de Inicio -->
    <div class="form-group">
        @Html.LabelFor(model => model.Horario_inicio, "Horario Inicio", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Horario_inicio, new { @class = "form-control", type = "time", id = "Horario_inicio" })
            @Html.ValidationMessageFor(model => model.Horario_inicio, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Horario de Fin -->
    <div class="form-group">
        @Html.LabelFor(model => model.Horario_fin, "Horario Fin", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Horario_fin, new { @class = "form-control", type = "time", id = "Horario_fin" })
            @Html.ValidationMessageFor(model => model.Horario_fin, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Nombre -->
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", id = "Nombre" })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Fecha de Creación -->
    <div class="form-group">
        @Html.LabelFor(model => model.Fecha_creacion, "Fecha Creación", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Fecha_creacion, new { @class = "form-control", type = "date", id = "Fecha_creacion" })
            @Html.ValidationMessageFor(model => model.Fecha_creacion, "", new { @class = "text-danger" })
        </div>
    </div>


    <!-- Imagen -->
    <div class="form-group">
        @Html.LabelFor(model => model.Imagen, "Imagen", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <!-- Muestra la imagen actual, si existe -->
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <p>Imagen actual:</p>
                <img src="@Url.Content("~/path/to/images/" + Model.Imagen)" alt="Imagen Actual" style="max-width: 200px;" />
            }
            else
            {
                <p>No hay imagen disponible</p>
            }

            <!-- Campo para ingresar el enlace de la imagen -->
            <input type="text" name="Imagen" class="form-control" id="Imagen" value="@Model.Imagen" placeholder="Ingrese la URL de la imagen" />

            @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" })
        </div>
    </div>


    @Html.HiddenFor(model => model.Id_Medico)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            @Html.ActionLink("Cancelar", "GHorarios", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
}

