@model ProyectoClinica.Models.Nota_Paciente

@{
    ViewBag.Title = "Crear Nota";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <div class="card shadow-lg p-4">
            <h3 class="text-center mb-3" style="color:#3bb4bc; font-weight: bold;">Nota Personal</h3>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.Nota_Del_Paciente, htmlAttributes: new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(model => model.Nota_Del_Paciente, new { @class = "form-control", rows = "8", placeholder = "Escribe tu nota aquí..." })
                @Html.ValidationMessageFor(model => model.Nota_Del_Paciente, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Regresar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Guardar
                </button>
            </div>
        </div>
    </div>
}
