@model List<ProyectoClinica.Models.Notificacion>

@{
    ViewBag.Title = "Notificaciones";
}

<h2>Notificaciones</h2>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var notificacion in Model)
        {
            <li>@notificacion.Mensaje - @notificacion.Fecha.ToString("dd/MM/yyyy HH:mm")</li>
        }
    </ul>
}
else
{
    <p>No hay notificaciones disponibles.</p>
}
