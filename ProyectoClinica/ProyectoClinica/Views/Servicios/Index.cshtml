@model IEnumerable<ProyectoClinica.Models.Servicio>

@{
    ViewBag.Title = "Index";
}

<div style="text-align: center; margin-bottom: 20px;">
    <a href="@Url.Action("VistaCON", "Contabilidad")" class="custom-btn">
        <i class="fas fa-home"></i> Inicio
    </a>
</div>
<style>
    .custom-btn {
        background-color: #0b7b82 !important;
        color: white !important;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Nombre del Servicio</label>
        </th>
        <th>
            <label>Precio del Servicio</label>
        </th>
        <th>
            <label>Especialidad del Servicio</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Servicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio_Servicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_Servicio }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id_Servicio }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_Servicio })
            </td>
        </tr>
    }

</table>
