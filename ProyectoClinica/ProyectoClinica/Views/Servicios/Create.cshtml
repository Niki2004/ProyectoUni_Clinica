@model ProyectoClinica.Models.Servicio

@{
    ViewBag.Title = "Create";
}

<link href="~/CSS/Crear.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Crear Nuevo Servicio</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-section">
            <legend>Información del Servicio</legend>
            <div class="form-grid">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre_Servicio, "Nombre del Servicio", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Nombre_Servicio, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Precio_Servicio, "Precio del Servicio", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Precio_Servicio, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Especialidad, "Especialidad", new { @class = "control-label" })
                    @Html.EditorFor(model => model.Especialidad, new { htmlAttributes = new { @class = "form-control" } })
                </div>

            </div>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Crear Pago" class="btn-primary" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary"})
        </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
