@model ProyectoClinica.Models.Servicio

@{
    ViewBag.Title = "Edit";
}

<link href="~/CSS/Editar.css" rel="stylesheet" />

<div class="container-form">
    <h2 class="page-title">Editar Servicio</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Servicio)

        <div class="form-section">
            <legend>Información del Servicio</legend>
            <div class="detail-group">
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Nombre_Servicio, "Nombre del Servicio")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Nombre_Servicio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre_Servicio, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Precio_Servicio, "Precio del Servicio")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Precio_Servicio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Precio_Servicio, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">@Html.LabelFor(model => model.Especialidad, "Especialidad")</div>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Especialidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Especialidad, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center" style="margin-top: 20px;">
            <input type="submit" value="Guardar" class="btn-primary" style="margin-right: 10px;" />
            @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn-secondary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}